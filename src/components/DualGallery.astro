<section id="gallery" class="py-16 sm:py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Gallery</h2>
      <p class="text-lg text-gray-600">Explore the beauty and serenity of Sri Janaki Mahal</p>
    </div>

    <!-- Dual-column scrolling gallery (left and right) -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 overflow-hidden">
      <!-- Left Column - Scrolling Right -->
      <div class="relative overflow-hidden h-96 rounded-lg">
        <div
          id="gallery-left"
          class="flex gap-4 animate-slide-in-left"
          style="animation: scroll-left 30s linear infinite;"
        >
          <div class="flex-shrink-0 w-80 h-96 rounded-lg overflow-hidden shadow-lg">
            <img src="/ayodhya-temple-spiritual.jpg" alt="Gallery 1" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300" />
          </div>
          <div class="flex-shrink-0 w-80 h-96 rounded-lg overflow-hidden shadow-lg">
            <img src="/ayodhya-room-interior.jpg" alt="Gallery 2" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300" />
          </div>
          <div class="flex-shrink-0 w-80 h-96 rounded-lg overflow-hidden shadow-lg">
            <img src="/ayodhya-courtyard-peaceful.jpg" alt="Gallery 3" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300" />
          </div>
          <div class="flex-shrink-0 w-80 h-96 rounded-lg overflow-hidden shadow-lg">
            <img src="/placeholder.svg?height=400&width=400" alt="Gallery 4" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300" />
          </div>
          <!-- Duplicate for seamless loop -->
          <div class="flex-shrink-0 w-80 h-96 rounded-lg overflow-hidden shadow-lg">
            <img src="/ayodhya-temple-spiritual.jpg" alt="Gallery 1" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300" />
          </div>
          <div class="flex-shrink-0 w-80 h-96 rounded-lg overflow-hidden shadow-lg">
            <img src="/ayodhya-room-interior.jpg" alt="Gallery 2" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300" />
          </div>
        </div>
      </div>

      <!-- Right Column - Scrolling Left -->
      <div class="relative overflow-hidden h-96 rounded-lg">
        <div
          id="gallery-right"
          class="flex gap-4 animate-slide-in-right"
          style="animation: scroll-right 30s linear infinite reverse;"
        >
          <div class="flex-shrink-0 w-80 h-96 rounded-lg overflow-hidden shadow-lg">
            <img src="/ayodhya-prayer-room-meditation.jpg" alt="Gallery 5" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300" />
          </div>
          <div class="flex-shrink-0 w-80 h-96 rounded-lg overflow-hidden shadow-lg">
            <img src="/ayodhya-spiritual-architecture.jpg" alt="Gallery 6" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300" />
          </div>
          <div class="flex-shrink-0 w-80 h-96 rounded-lg overflow-hidden shadow-lg">
            <img src="/placeholder.svg?height=400&width=400" alt="Gallery 7" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300" />
          </div>
          <div class="flex-shrink-0 w-80 h-96 rounded-lg overflow-hidden shadow-lg">
            <img src="/placeholder.svg?height=400&width=400" alt="Gallery 8" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300" />
          </div>
          <!-- Duplicate for seamless loop -->
          <div class="flex-shrink-0 w-80 h-96 rounded-lg overflow-hidden shadow-lg">
            <img src="/ayodhya-prayer-room-meditation.jpg" alt="Gallery 5" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300" />
          </div>
          <div class="flex-shrink-0 w-80 h-96 rounded-lg overflow-hidden shadow-lg">
            <img src="/ayodhya-spiritual-architecture.jpg" alt="Gallery 6" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes scroll-right {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(50%);
    }
  }
</style>
