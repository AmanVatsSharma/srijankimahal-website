---
import { generateFAQSchema, defaultFAQs, type FAQItem } from '../lib/schemas/faq';

// Use default FAQs or accept custom FAQs as props
interface Props {
  faqs?: FAQItem[];
}

const { faqs = defaultFAQs } = Astro.props;

// Generate FAQ schema
const faqSchema = generateFAQSchema(faqs);

console.log('[FAQ Section] Rendering', faqs.length, 'FAQs');
---

<section id="faq" class="py-16 sm:py-24 bg-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Frequently Asked Questions
      </h2>
      <p class="text-lg text-gray-600">
        Everything you need to know about Sri Janaki Mahal Trust
      </p>
    </div>

    <div class="space-y-6">
      {faqs.map((faq, index) => (
        <div class="bg-gray-50 rounded-lg p-6 hover:shadow-md transition-shadow">
          <h3 class="text-xl font-semibold text-gray-900 mb-3 flex items-start">
            <span class="text-amber-600 mr-3 flex-shrink-0">Q{index + 1}.</span>
            <span>{faq.question}</span>
          </h3>
          <div class="ml-8">
            <p class="text-gray-700 leading-relaxed">
              {faq.answer}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- FAQ Schema for SEO -->
    {faqSchema && (
      <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
    )}
  </div>
</section>

