---
import { generateFAQSchema, defaultFAQs, type FAQItem } from '../lib/schemas/faq';

// Use default FAQs or accept custom FAQs as props
interface Props {
  faqs?: FAQItem[];
}

const { faqs = defaultFAQs } = Astro.props;

// Generate FAQ schema
const faqSchema = generateFAQSchema(faqs);
---

<section id="faq" class="py-16 sm:py-24 bg-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Frequently Asked Questions
      </h2>
      <p class="text-lg text-gray-600">
        Everything you need to know about Sri Janaki Mahal Trust
      </p>
    </div>

    <div class="space-y-3">
      {faqs.map((faq, index) => (
        <details class="group rounded-xl border border-gray-200 bg-gray-50 open:bg-white open:shadow-sm transition-colors">
          <summary class="cursor-pointer list-none px-5 py-4">
            <h3 class="text-base sm:text-lg font-semibold text-gray-900 flex items-start justify-between gap-4">
              <span class="flex items-start">
                <span class="text-amber-600 mr-3 flex-shrink-0">Q{index + 1}.</span>
                <span>{faq.question}</span>
              </span>
              <span class="text-amber-600 text-xl leading-none transition-transform group-open:rotate-45" aria-hidden="true">+</span>
            </h3>
          </summary>
          <div class="px-5 pb-5">
            <p class="ml-8 text-gray-700 leading-relaxed">
              {faq.answer}
            </p>
          </div>
        </details>
      ))}
    </div>

    <!-- FAQ Schema for SEO -->
    {faqSchema && (
      <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
    )}
  </div>
</section>

