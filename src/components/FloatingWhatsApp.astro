        </g>
      </svg>
    </a>
  </div>
</div>
<script is:inline>
  setTimeout(() => {
    const wrap = document.getElementById('whatsapp-bubble-text-container');
    if (wrap) wrap.classList.remove('hidden');
    const close = document.getElementById('wa-close-bubble');
    if (close) {
      close.onclick = () => {
        wrap.classList.add('hidden');
      }
    }
  }, 1800);
</script>
