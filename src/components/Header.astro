---
import { WHATSAPP_BOOKING_LINK, TEL_LINK } from '../lib/constants';
import LanguageSwitcher from './LanguageSwitcher.astro';
import { detectLangFromPath, withLangPrefix } from '../lib/i18n';

const pathname = Astro.url.pathname;
const currentLang = detectLangFromPath(pathname);
const isHindi = currentLang === 'hi';

const href = (path: string) => withLangPrefix(path, currentLang);
const content = isHindi
  ? {
      brandPrimary: 'श्री जानकी महल',
      brandSecondary: 'अयोध्या',
      brandMobile: 'श्री जानकी',
      nav: {
        home: 'होम',
        about: 'श्री / श्री जांकी महल ट्रस्ट के बारे में',
        booking: 'आधिकारिक जानकी महल बुकिंग',
        rooms: 'रूम्स',
        blog: 'ब्लॉग',
        more: 'अन्य',
        prices: 'रूम प्राइस',
        amenities: 'सुविधाएँ',
        groupBooking: 'ग्रुप बुकिंग',
        gallery: 'गैलरी',
        reviews: 'रिव्यू',
        verify: 'श्री जांकी महल ट्रस्ट सत्यापन',
        faq: 'सामान्य प्रश्न',
        contact: 'आधिकारिक संपर्क नंबर',
      },
      cta: {
        whatsapp: 'व्हाट्सऐप',
        callNow: 'अभी कॉल करें',
        call: 'कॉल',
      },
    }
  : {
      brandPrimary: 'Sri Janaki Mahal',
      brandSecondary: 'Ayodhya',
      brandMobile: 'Sri Janaki',
      nav: {
        home: 'Home',
        about: 'About Sri / Shri Janki Mahal Trust',
        booking: 'Official Janaki Mahal Booking',
        rooms: 'Rooms',
        blog: 'Blog',
        more: 'More',
        prices: 'Room Prices',
        amenities: 'Amenities',
        groupBooking: 'Group Booking',
        gallery: 'Gallery',
        reviews: 'Reviews',
        verify: 'Verify Sri Janki Mahal Trust',
        faq: 'FAQs',
        contact: 'Official Contact Number',
      },
      cta: {
        whatsapp: 'WhatsApp',
        callNow: 'Call Now',
        call: 'Call',
      },
    };
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href={href('/')} class="flex items-center gap-2 group">
        <div class="w-10 h-10 bg-amber-600 rounded-lg flex items-center justify-center text-white font-bold text-lg group-hover:animate-glow transition-all">
          ॐ
        </div>
        <div class="hidden sm:block">
          <!-- Use non-H1 branding text to prevent multiple H1s site-wide -->
          <p class="text-lg font-bold text-gray-900">{content.brandPrimary}</p>
          <p class="text-xs text-gray-600">{content.brandSecondary}</p>
        </div>
        <div class="sm:hidden">
          <p class="text-sm font-bold text-gray-900">{content.brandMobile}</p>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-6">
        <a href={href('/')} class="text-sm font-medium text-gray-900 hover:text-amber-600 transition-colors">{content.nav.home}</a>
        <a href={href('/about')} class="text-sm font-medium text-gray-900 hover:text-amber-600 transition-colors">{content.nav.about}</a>
        <a href={href('/booking')} class="text-sm font-semibold text-gray-900 hover:text-amber-600 transition-colors">{content.nav.booking}</a>
        <a href={href('/#rooms')} class="text-sm font-medium text-gray-900 hover:text-amber-600 transition-colors">{content.nav.rooms}</a>
        <a href={href('/blog')} class="text-sm font-medium text-gray-900 hover:text-amber-600 transition-colors">{content.nav.blog}</a>
        <details class="relative">
          <summary class="text-sm font-medium text-gray-900 hover:text-amber-600 transition-colors cursor-pointer flex items-center gap-1">
            {content.nav.more}
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </summary>
          <div class="absolute right-0 mt-2 w-56 rounded-xl border border-gray-200 bg-white shadow-lg p-2">
            <a href={href('/room-prices')} class="block rounded-lg px-3 py-2 text-sm text-gray-900 hover:bg-amber-50 hover:text-amber-700 transition-colors">
              {content.nav.prices}
            </a>
            <a href={href('/amenities')} class="block rounded-lg px-3 py-2 text-sm text-gray-900 hover:bg-amber-50 hover:text-amber-700 transition-colors">
              {content.nav.amenities}
            </a>
            <a href={href('/group-booking')} class="block rounded-lg px-3 py-2 text-sm text-gray-900 hover:bg-amber-50 hover:text-amber-700 transition-colors">
              {content.nav.groupBooking}
            </a>
            <a href={href('/gallery')} class="block rounded-lg px-3 py-2 text-sm text-gray-900 hover:bg-amber-50 hover:text-amber-700 transition-colors">
              {content.nav.gallery}
            </a>
            <a href={href('/reviews')} class="block rounded-lg px-3 py-2 text-sm text-gray-900 hover:bg-amber-50 hover:text-amber-700 transition-colors">
              {content.nav.reviews}
            </a>
          </div>
        </details>
        <a href={href('/official')} class="text-sm font-medium text-gray-900 hover:text-amber-600 transition-colors">{content.nav.verify}</a>
        <a href={href('/#faq')} class="text-sm font-medium text-gray-900 hover:text-amber-600 transition-colors">{content.nav.faq}</a>
        <a href={href('/contact-number')} class="text-sm font-medium text-gray-900 hover:text-amber-600 transition-colors">{content.nav.contact}</a>
      </nav>

      <!-- CTA Buttons -->
      <div class="hidden md:flex items-center gap-3">
        <LanguageSwitcher />
        <a
          href={WHATSAPP_BOOKING_LINK}
          target="_blank"
          rel="noopener noreferrer"
          class="px-4 py-2 rounded-lg bg-green-600 text-white text-sm font-medium hover:bg-green-700 transition-colors flex items-center gap-2"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.67-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.076 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421-7.403h-.004a9.87 9.87 0 00-4.255.949c-1.238.503-2.335 1.236-3.356 2.192-1.048 1.007-1.954 2.14-2.625 3.646-.735 1.7-1.14 3.6-.788 5.629.793 4.811 4.823 8.52 9.617 8.52 1.214 0 2.389-.184 3.514-.547 1.265-.41 2.439-1.04 3.466-1.872 1.048-.87 1.954-1.956 2.625-3.462.735-1.7 1.14-3.6.788-5.629-.793-4.811-4.823-8.52-9.617-8.52z" />
          </svg>
          {content.cta.whatsapp}
        </a>
        <a
          href={TEL_LINK}
          class="px-4 py-2 rounded-lg bg-amber-600 text-white text-sm font-medium hover:bg-amber-700 transition-colors"
        >
          {content.cta.callNow}
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 hover:bg-gray-100 rounded-lg transition-colors"
      >
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <nav id="mobile-nav" class="md:hidden pb-4 space-y-2 hidden">
      <div class="px-4 pt-2">
        <LanguageSwitcher />
      </div>
      <a href={href('/')} class="block px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 rounded-lg">{content.nav.home}</a>
      <a href={href('/about')} class="block px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 rounded-lg">{content.nav.about}</a>
      <a href={href('/booking')} class="block px-4 py-2 text-sm font-semibold text-gray-900 hover:bg-gray-100 rounded-lg">{content.nav.booking}</a>
      <a href={href('/#rooms')} class="block px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 rounded-lg">{content.nav.rooms}</a>
      <a href={href('/blog')} class="block px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 rounded-lg">{content.nav.blog}</a>
      <a href={href('/room-prices')} class="block px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 rounded-lg">{content.nav.prices}</a>
      <a href={href('/amenities')} class="block px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 rounded-lg">{content.nav.amenities}</a>
      <a href={href('/group-booking')} class="block px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 rounded-lg">{content.nav.groupBooking}</a>
      <a href={href('/gallery')} class="block px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 rounded-lg">{content.nav.gallery}</a>
      <a href={href('/reviews')} class="block px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 rounded-lg">{content.nav.reviews}</a>
      <a href={href('/official')} class="block px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 rounded-lg">{content.nav.verify}</a>
      <a href={href('/#faq')} class="block px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 rounded-lg">{content.nav.faq}</a>
      <a href={href('/contact-number')} class="block px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 rounded-lg">{content.nav.contact}</a>
      <div class="flex gap-2 pt-2">
        <a
          href={WHATSAPP_BOOKING_LINK}
          target="_blank"
          rel="noopener noreferrer"
          class="flex-1 px-3 py-2 rounded-lg bg-green-600 text-white text-sm font-medium hover:bg-green-700 text-center"
        >
          {content.cta.whatsapp}
        </a>
        <a
          href={TEL_LINK}
          class="flex-1 px-3 py-2 rounded-lg bg-amber-600 text-white text-sm font-medium hover:bg-amber-700 text-center"
        >
          {content.cta.call}
        </a>
      </div>
    </nav>
  </div>
</header>

<!-- Preserve document flow when header is fixed -->
<div class="h-16" aria-hidden="true"></div>

<script>
  try {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileNav = document.getElementById('mobile-nav');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');

    const openMenu = () => {
      if (!mobileNav || !menuIcon || !closeIcon) return;
      mobileNav.classList.remove('hidden');
      menuIcon.classList.add('hidden');
      closeIcon.classList.remove('hidden');
    };

    const closeMenu = () => {
      if (!mobileNav || !menuIcon || !closeIcon) return;
      mobileNav.classList.add('hidden');
      menuIcon.classList.remove('hidden');
      closeIcon.classList.add('hidden');
    };

    mobileMenuBtn?.addEventListener('click', () => {
      const isHidden = mobileNav?.classList.contains('hidden') ?? true;
      if (isHidden) openMenu();
      else closeMenu();
    });

    // Close menu when a link is selected
    const navLinks = mobileNav?.querySelectorAll('a');
    navLinks?.forEach((link) => {
      link.addEventListener('click', () => closeMenu());
    });

    // Close menu when clicking outside (mobile only)
    document.addEventListener('click', (e) => {
      if (!mobileNav || !mobileMenuBtn) return;
      const path = typeof e.composedPath === 'function' ? e.composedPath() : [];
      const clickedInsideNav = path.includes(mobileNav);
      const clickedButton = path.includes(mobileMenuBtn);
      const isOpen = !mobileNav.classList.contains('hidden');
      if (isOpen && !clickedInsideNav && !clickedButton) closeMenu();
    });
  } catch {
    // no-op: do not block rendering
  }
</script>

<style>
  summary {
    list-style: none;
  }

  summary::-webkit-details-marker {
    display: none;
  }
</style>
