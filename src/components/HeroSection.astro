---
---

<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img src="/ayodhya-temple-spiritual-architecture-golden-hour.jpg" alt="Sri Janaki Mahal" class="w-full h-full object-cover" />
    <div class="absolute inset-0 bg-gradient-to-r from-white/80 via-white/60 to-white/40"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center animate-fade-in-up">
    <div class="mb-6 inline-block">
      <span class="text-amber-600 text-sm font-semibold tracking-widest uppercase">Welcome to Ayodhya</span>
    </div>

    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
      Book Your Sacred Stay at <span class="text-amber-600">Sri Janaki Mahal</span>
    </h1>

    <p class="text-lg sm:text-xl text-gray-700 mb-8 max-w-2xl mx-auto leading-relaxed">
      Experience divine hospitality in the spiritual heart of Ayodhya. Comfortable rooms, warm service, and sacred ambiance await you.
    </p>

    <!-- Enhanced CTA Buttons with correct numbers -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center flex-wrap">
      <!-- Book Now Button -->
      <a
        href="https://wa.me/919933437469?text=I%20would%20like%20to%20book%20a%20room%20at%20Sri%20Janaki%20Mahal"
        target="_blank"
        rel="noopener noreferrer"
        class="px-8 py-4 bg-gradient-to-r from-amber-600 to-amber-700 text-white rounded-xl font-semibold hover:shadow-2xl transition-all duration-300 flex items-center gap-2 group animate-glow transform hover:scale-105"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        Book Now
        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>

      <!-- WhatsApp Button -->
      <a
        href="https://wa.me/919933437469"
        target="_blank"
        rel="noopener noreferrer"
        class="px-8 py-4 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-xl font-semibold hover:shadow-2xl transition-all duration-300 flex items-center gap-2 transform hover:scale-105"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.67-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.076 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421-7.403h-.004a9.87 9.87 0 00-4.255.949c-1.238.503-2.335 1.236-3.356 2.192-1.048 1.007-1.954 2.14-2.625 3.646-.735 1.7-1.14 3.6-.788 5.629.793 4.811 4.823 8.52 9.617 8.52 1.214 0 2.389-.184 3.514-.547 1.265-.41 2.439-1.04 3.466-1.872 1.048-.87 1.954-1.956 2.625-3.462.735-1.7 1.14-3.6.788-5.629-.793-4.811-4.823-8.52-9.617-8.52z" />
        </svg>
        WhatsApp Us
      </a>

      <!-- Call Now Button -->
      <a
        href="tel:+919933437469"
        class="px-8 py-4 border-2 border-amber-600 text-amber-600 rounded-xl font-semibold hover:bg-amber-600 hover:text-white transition-all duration-300 flex items-center gap-2 transform hover:scale-105"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        Call Us Now
      </a>
    </div>
    <!-- Mobile Number Displayed Nicely and Clickable -->
    <div class="mt-6 flex flex-col items-center">
      <a
        href="tel:+919933437469"
        class="text-lg sm:text-xl font-semibold text-gray-700 bg-white/70 px-6 py-3 rounded-lg shadow inline-flex items-center gap-2 border border-amber-200 hover:bg-amber-50 transition cursor-pointer select-all"
        title="Click to Call"
      >
        <svg class="h-6 w-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        +91 99334&nbsp;37469
      </a>
      <span class="mt-2 text-xs text-gray-400 tracking-widest select-all">For bookings &amp; info</span>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
    <div class="w-6 h-10 border-2 border-amber-600 rounded-full flex items-start justify-center p-2">
      <div class="w-1 h-2 bg-amber-600 rounded-full animate-pulse"></div>
    </div>
  </div>
</section>
