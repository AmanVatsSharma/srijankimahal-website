<script>
  const modal = document.getElementById('room-modal');
  const closeBtn = document.getElementById('close-modal');
  const roomCards = document.querySelectorAll('.room-card');
  const viewDetailsBtns = document.querySelectorAll('.view-details-btn');

  function openModal(roomCard: HTMLElement) {
    const title = roomCard.dataset.title;
    const price = roomCard.dataset.price;
    const roomType = roomCard.dataset.room;
    
    const modalTitle = document.getElementById('modal-title');
    const modalPrice = document.getElementById('modal-price');
    
    if (modalTitle) modalTitle.textContent = title || '';
    if (modalPrice) modalPrice.textContent = `₹${price || '0'}`;
    
    // Update modal gallery images based on room type
    const img1 = document.getElementById('modal-img-1') as HTMLImageElement;
    const img2 = document.getElementById('modal-img-2') as HTMLImageElement;
    const img3 = document.getElementById('modal-img-3') as HTMLImageElement;
    
    let imageSet: string[] = [];
    
    switch(roomType) {
      case '4-bed-ac':
        imageSet = ['/rooms/4-Bed-01.jpg', '/rooms/4-Bed-02.jpg', '/rooms/4-Bed-01.jpg'];
        break;
      case '4-bed-non-ac':
        imageSet = ['/rooms/4-Bed-02.jpg', '/rooms/4-Bed-01.jpg', '/rooms/4-Bed-02.jpg'];
        break;
      case '3-bed-ac':
        imageSet = ['/rooms/3-Bed-01.jpg', '/rooms/3-Bed-02.jpg', '/rooms/3-Bed-01.jpg'];
        break;
      case '3-bed-non-ac':
        imageSet = ['/rooms/3-Bed-02.jpg', '/rooms/3-Bed-01.jpg', '/rooms/3-Bed-02.jpg'];
        break;
      case '2-bed-ac':
        imageSet = ['/rooms/2-Bed-01.jpg', '/rooms/2-Bed-02.jpg', '/rooms/2-Bed-01.jpg'];
        break;
      case '2-bed-non-ac':
        imageSet = ['/rooms/2-Bed-02.jpg', '/rooms/2-Bed-01.jpg', '/rooms/2-Bed-02.jpg'];
        break;
      case 'deluxe-suite':
        imageSet = ['/rooms/Deluxe.jpg', '/rooms/Deluxe.jpg', '/rooms/Deluxe.jpg'];
        break;
      case 'luxury-suite':
        imageSet = ['/rooms/Suit-Luxury.jpg', '/rooms/Suit-Luxury.jpg', '/rooms/Suit-Luxury.jpg'];
        break;
      case 'family-room':
        imageSet = ['/rooms/IMG-20251018-WA0003.jpg', '/rooms/IMG-20251018-WA0003.jpg', '/rooms/IMG-20251018-WA0003.jpg'];
        break;
      default:
        imageSet = ['/placeholder.svg?height=250&width=250', '/placeholder.svg?height=250&width=250', '/placeholder.svg?height=250&width=250'];
    }
    
    if (img1) img1.src = imageSet[0];
    if (img2) img2.src = imageSet[1];
    if (img3) img3.src = imageSet[2];
    
    const whatsappLink = `https://wa.me/919933437469?text=Hello%20Sri%20Janaki%20Mahal%2C%20I%20would%20like%20to%20book%20${encodeURIComponent(title || '')}%20for%20₹${price || '0'}%20per%20night`;
    const modalWhatsapp = document.getElementById('modal-whatsapp') as HTMLAnchorElement;
    const modalCall = document.getElementById('modal-call') as HTMLAnchorElement;
    
    if (modalWhatsapp) modalWhatsapp.href = whatsappLink;
    if (modalCall) modalCall.href = 'tel:+919933437469';
    
    if (modal) {
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
  }

  function closeModalFunc() {
    if (modal) {
      modal.classList.remove('active');
      document.body.style.overflow = 'auto';
    }
  }

  viewDetailsBtns.forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      const roomCard = btn.closest('.room-card') as HTMLElement;
      if (roomCard) openModal(roomCard);
    });
  });

  roomCards.forEach(card => {
    card.addEventListener('click', () => {
      openModal(card as HTMLElement);
    });
  });

  if (closeBtn) closeBtn.addEventListener('click', closeModalFunc);
  if (modal) modal.addEventListener('click', (e) => {
    if (e.target === modal) closeModalFunc();
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeModalFunc();
  });
</script>
