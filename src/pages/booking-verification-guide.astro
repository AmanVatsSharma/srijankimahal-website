---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro';
import { generateBreadcrumbSchema } from '../lib/schemas/breadcrumb';
import { generateFAQSchema, type FAQItem } from '../lib/schemas/faq';
import { DISPLAY_PHONE, OFFICIAL_EMAIL, WHATSAPP_LINK } from '../lib/constants';

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: '/' },
  { name: 'Booking Verification', url: '/booking-verification-guide' },
]);

const faqs: FAQItem[] = [
  {
    question: 'What is the official booking number for Sri Janaki Mahal Trust?',
    answer: `The official booking number is ${DISPLAY_PHONE}. Use the same number for WhatsApp as well.`,
  },
  {
    question: 'Is WhatsApp booking available?',
    answer: `Yes. You can WhatsApp us on ${DISPLAY_PHONE} (official). Use the official WhatsApp link on this site: ${WHATSAPP_LINK}.`,
  },
  {
    question: 'What details should I share while booking?',
    answer:
      'Share check-in date, check-out date, number of guests, preferred room type (AC/Non‑AC, 2/3/4 bed), and arrival time for smoother check-in.',
  },
  {
    question: 'Where can I verify the official channels again?',
    answer:
      'Use the official pages: /official-booking and /contact-number. These pages are maintained by the trust website.',
  },
];

const faqSchema = generateFAQSchema(faqs);
---

<Layout
  title="Booking Verification Guide - Sri Janaki Mahal Trust | Confirm Official Reservation"
  description={`Step-by-step booking verification for Sri Janaki Mahal Trust (Janaki Mahal Trust / Sri Janki Mahal Trust Ayodhya). Official helpline: ${DISPLAY_PHONE}.`}
  keywords={[
    'booking verification sri janaki mahal trust',
    'janaki mahal trust booking confirmation',
    'how to verify janaki mahal trust booking',
    'sri janki mahal trust official booking confirmation',
  ]}
  canonical="/booking-verification-guide"
  ogImage="/og.jpg"
>
  <Header />

  <main class="min-h-screen bg-[#faf8f3] py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-3xl shadow-lg p-8 sm:p-10">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Booking Verification Guide</h1>
        <p class="text-lg text-gray-700 leading-relaxed">
          This page explains exactly how to confirm you are booking with the **official Sri Janaki Mahal Trust** and not an
          unauthorized intermediary.
        </p>

        <div class="mt-8 rounded-2xl border border-green-200 bg-green-50 p-6">
          <h2 class="text-2xl font-semibold text-gray-900 mb-3">Official channels</h2>
          <ul class="list-disc pl-6 text-gray-800 space-y-2">
            <li>
              **Phone/WhatsApp:** <a class="text-green-700 font-semibold hover:underline" href="tel:+919893563047">{DISPLAY_PHONE}</a>
            </li>
            <li>
              **Email:** <a class="text-green-700 font-semibold hover:underline" href={`mailto:${OFFICIAL_EMAIL}`}>{OFFICIAL_EMAIL}</a>
            </li>
            <li>
              **Official pages:** <a class="text-green-700 font-semibold hover:underline" href="/official-booking">Official booking</a>,{' '}
              <a class="text-green-700 font-semibold hover:underline" href="/contact-number">Contact number</a>
            </li>
          </ul>
        </div>

        <h2 class="mt-10 text-2xl font-semibold text-gray-900">Verification checklist</h2>
        <div class="mt-4 grid gap-4">
          <div class="rounded-2xl border border-gray-200 p-5">
            <h3 class="text-lg font-semibold text-gray-900">1) Verify contact source</h3>
            <p class="mt-2 text-gray-700">
              Confirm that the conversation is happening via <strong>{DISPLAY_PHONE}</strong> (call or WhatsApp). If it’s a different
              number, treat it as suspicious and re-check via the official contact page.
            </p>
          </div>
          <div class="rounded-2xl border border-gray-200 p-5">
            <h3 class="text-lg font-semibold text-gray-900">2) Confirm room details</h3>
            <p class="mt-2 text-gray-700">
              Confirm room type (AC/Non‑AC, 2/3/4 bed), dates, number of guests, total price, meal inclusion, and check-in/check-out time.
            </p>
          </div>
          <div class="rounded-2xl border border-gray-200 p-5">
            <h3 class="text-lg font-semibold text-gray-900">3) Receive confirmation</h3>
            <p class="mt-2 text-gray-700">
              Ask for a clear written confirmation message including your details and booking summary. Keep a screenshot for check-in.
            </p>
          </div>
          <div class="rounded-2xl border border-gray-200 p-5">
            <h3 class="text-lg font-semibold text-gray-900">4) Pay only after confirmation</h3>
            <p class="mt-2 text-gray-700">
              Do not pay before confirmation. If payment instructions seem unclear, pause and verify again via the official helpline.
            </p>
          </div>
        </div>

        <div class="mt-10 grid gap-4 sm:grid-cols-2">
          <a
            href="/how-to-avoid-scams"
            class="rounded-xl border border-[#2d2215] px-6 py-4 text-[#2d2215] font-semibold hover:bg-[#f4ecdf] transition-colors text-center"
          >
            Scam prevention checklist
          </a>
          <a
            href="/booking"
            class="rounded-xl bg-[#2d2215] px-6 py-4 text-white font-semibold hover:bg-[#b45309] transition-colors text-center"
          >
            Go to booking page
          </a>
        </div>
      </div>

      {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}
      {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
    </div>
  </main>

  <Footer />
  <FloatingWhatsApp />
</Layout>

