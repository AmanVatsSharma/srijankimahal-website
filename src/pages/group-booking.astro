---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro';
import { generateBreadcrumbSchema } from '../lib/schemas/breadcrumb';
import { generateFAQSchema, type FAQItem } from '../lib/schemas/faq';
import { DISPLAY_PHONE, TEL_LINK, WHATSAPP_LINK } from '../lib/constants';

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: '/' },
  { name: 'Group Booking', url: '/group-booking' },
]);

const whatsappGroupMessage = encodeURIComponent(
  `Hello Sri Janaki Mahal Trust, I want to book rooms for a group.\n\nDates:\nGuests:\nRoom preference (2/3/4 bed, AC/Non-AC):\nGroup coordinator name & phone:\nArrival time:\n\nPlease confirm availability and final tariff.`
);
const whatsappGroupLink = `${WHATSAPP_LINK}?text=${whatsappGroupMessage}`;

const faqs: FAQItem[] = [
  {
    question: 'How to book rooms for a yatri group at Sri Janaki Mahal Trust?',
    answer:
      'Message or call the official desk with dates, total guests, room preference, and a single group coordinator contact. The team confirms availability and shares final tariff during confirmation.',
  },
  {
    question: 'Which room types are best for groups?',
    answer:
      'For groups, 4-bed rooms are commonly preferred. For mixed families, a combination of 2-bed and 3-bed rooms may be better. Check room pages for details and confirm availability with the desk.',
  },
  {
    question: 'What details should a group coordinator send first?',
    answer:
      'Dates, number of guests, room type preference, arrival time, and one coordinator phone number. If you have a guest list, mention that you can share it on confirmation.',
  },
];

const faqSchema = generateFAQSchema(faqs);
---

<Layout
  title="Group Booking - Sri Janaki Mahal Trust | Yatri Mandal Rooms in Ayodhya"
  description={`Group booking at Sri Janaki Mahal Trust (Ayodhya near Ram Mandir). Yatri mandal and family group stays: checklist, room types, and official booking process. Helpline: ${DISPLAY_PHONE}.`}
  keywords={[
    'Sri Janaki Mahal Trust group booking',
    'yatri mandal booking ayodhya',
    'bulk booking janaki mahal trust',
    'group rooms near ram mandir',
    'Sri Janki Mahal Trust group rooms',
  ]}
  canonical="/group-booking"
  ogImage="/og.jpg"
>
  <Header />

  <main class="min-h-screen bg-[#faf8f3]">
    <section class="bg-gradient-to-r from-amber-600 to-rose-600 text-white py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl sm:text-5xl font-bold mb-5">
          Sri Janaki Mahal Trust <span class="text-amber-200">Group Booking</span>
        </h1>
        <p class="text-xl max-w-3xl mx-auto">
          Yatri mandal, family groups, and bulk stays near Ram Mandir — book via official channels for verified confirmation.
        </p>
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={TEL_LINK}
            class="px-8 py-4 bg-white text-amber-700 font-bold rounded-lg hover:bg-gray-100 transition-colors text-lg"
          >
            Call: {DISPLAY_PHONE}
          </a>
          <a
            href={whatsappGroupLink}
            target="_blank"
            rel="noopener noreferrer"
            class="px-8 py-4 bg-green-600 text-white font-bold rounded-lg hover:bg-green-700 transition-colors text-lg"
          >
            WhatsApp group booking
          </a>
        </div>
      </div>
    </section>

    <section class="py-14 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid gap-6 lg:grid-cols-2">
          <div class="rounded-3xl border border-gray-100 bg-white p-8 shadow-sm">
            <h2 class="text-2xl font-bold text-gray-900 mb-3">Group booking checklist</h2>
            <ul class="mt-4 space-y-2 text-gray-800">
              <li><span class="text-green-700 font-semibold">✓</span> Dates (check-in / check-out)</li>
              <li><span class="text-green-700 font-semibold">✓</span> Total guests (adults + children)</li>
              <li><span class="text-green-700 font-semibold">✓</span> Room preference (2/3/4 bed, AC/Non‑AC)</li>
              <li><span class="text-green-700 font-semibold">✓</span> One group coordinator name + phone</li>
              <li><span class="text-green-700 font-semibold">✓</span> Arrival time (train/flight details helpful)</li>
            </ul>
            <p class="mt-4 text-sm text-gray-600">
              For scam prevention and verification, see{' '}
              <a class="underline underline-offset-2" href="/official-booking">
                official booking
              </a>{' '}
              and{' '}
              <a class="underline underline-offset-2" href="/booking-verification-guide">
                booking verification guide
              </a>
              .
            </p>
          </div>

          <div class="rounded-3xl border border-amber-200 bg-amber-50 p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-3">Suggested room types for groups</h2>
            <div class="mt-4 grid gap-4 sm:grid-cols-2">
              <a
                href="/rooms/4-bed-non-ac"
                class="rounded-2xl bg-white border border-gray-200 p-5 hover:border-amber-300 transition-colors"
              >
                <h3 class="font-bold text-gray-900">4 Bed Non‑AC</h3>
                <p class="text-gray-700 text-sm mt-1">Good for budget group stays</p>
              </a>
              <a
                href="/rooms/4-bed-ac"
                class="rounded-2xl bg-white border border-gray-200 p-5 hover:border-amber-300 transition-colors"
              >
                <h3 class="font-bold text-gray-900">4 Bed AC</h3>
                <p class="text-gray-700 text-sm mt-1">Comfort option for groups</p>
              </a>
              <a
                href="/rooms/3-bed-non-ac"
                class="rounded-2xl bg-white border border-gray-200 p-5 hover:border-amber-300 transition-colors"
              >
                <h3 class="font-bold text-gray-900">3 Bed Non‑AC</h3>
                <p class="text-gray-700 text-sm mt-1">Flexible for mixed families</p>
              </a>
              <a
                href="/rooms/2-bed-ac"
                class="rounded-2xl bg-white border border-gray-200 p-5 hover:border-amber-300 transition-colors"
              >
                <h3 class="font-bold text-gray-900">2 Bed AC</h3>
                <p class="text-gray-700 text-sm mt-1">Couples/smaller families</p>
              </a>
            </div>
            <p class="mt-4 text-sm text-gray-700">
              View full tariff ranges on <a class="underline underline-offset-2" href="/room-prices">room prices</a>.
            </p>
          </div>
        </div>

        <div class="mt-14 rounded-3xl bg-gray-50 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-3">Recommended first WhatsApp message (copy/paste)</h2>
          <pre class="mt-4 whitespace-pre-wrap rounded-2xl bg-white border border-gray-200 p-6 text-gray-900 text-sm leading-relaxed">
Hello Sri Janaki Mahal Trust, I want to book rooms for a group.

Dates:
Guests:
Room preference (2/3/4 bed, AC/Non-AC):
Group coordinator name & phone:
Arrival time:

Please confirm availability and final tariff.
          </pre>
          <div class="mt-6 flex flex-col sm:flex-row gap-3">
            <a
              href={whatsappGroupLink}
              target="_blank"
              rel="noopener noreferrer"
              class="flex-1 rounded-xl bg-green-600 px-6 py-3 text-white font-semibold hover:bg-green-700 transition-colors text-center"
            >
              Send on WhatsApp
            </a>
            <a
              href="/booking"
              class="flex-1 rounded-xl border border-[#2d2215] px-6 py-3 text-[#2d2215] font-semibold hover:bg-[#f4ecdf] transition-colors text-center"
            >
              Booking page
            </a>
          </div>
        </div>
      </div>
    </section>

    <section class="py-14 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">FAQs</h2>
        <div class="space-y-6">
          {faqs.map((faq, index) => (
            <div class="rounded-2xl border border-gray-100 bg-gray-50 p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">
                <span class="text-amber-700">Q{index + 1}.</span> {faq.question}
              </h3>
              <p class="text-gray-800 leading-relaxed">{faq.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
  {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}

  <Footer />
  <FloatingWhatsApp />
</Layout>

