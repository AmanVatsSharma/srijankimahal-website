const faqSchema = generateFAQSchema(faqs);
---

<Layout
  title="рд╕реБрд╡рд┐рдзрд╛рдПрдБ - рд╢реНрд░реА рдЬрд╛рдирдХреА рдорд╣рд▓ рдЯреНрд░рд╕реНрдЯ | рднреЛрдЬрди рд╢рд╛рдорд┐рд▓, рд╣реЙрдЯ рд╡рд╛рдЯрд░, рдЕрдиреНрдп рд╕реБрд╡рд┐рдзрд╛рдПрдБ"
  description={`рд╢реНрд░реА рдЬрд╛рдирдХреА рдорд╣рд▓ рдЯреНрд░рд╕реНрдЯ (рдЕрдпреЛрдзреНрдпрд╛) рдХреА рд╕реБрд╡рд┐рдзрд╛рдПрдБ: рднреЛрдЬрди рд╢рд╛рдорд┐рд▓, рд╣реЙрдЯ рд╡рд╛рдЯрд░, рд╢рд╛рдВрдд рд╡рд╛рддрд╛рд╡рд░рдг рдФрд░ рдмреБрдХрд┐рдВрдЧ рд╕рдкреЛрд░реНрдЯред рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рд╣реЗрд▓реНрдкрд▓рд╛рдЗрди: ${DISPLAY_PHONE}.`}
  keywords={[
    'рд╢реНрд░реА рдЬрд╛рдирдХреА рдорд╣рд▓ рдЯреНрд░рд╕реНрдЯ рд╕реБрд╡рд┐рдзрд╛рдПрдБ',
    'рднреЛрдЬрди рд╕рд╣рд┐рдд рдЕрдпреЛрдзреНрдпрд╛',
    'рд╣реЙрдЯ рд╡рд╛рдЯрд░ рд╕реБрд╡рд┐рдзрд╛',
    'рдЬрдирдХреА рдорд╣рд▓ рдлреИрд╕рд┐рд▓рд┐рдЯреАрдЬ',
  ]}
  canonical="/hi/amenities"
  ogImage="/og.jpg"
  lang="hi"
>
  <Header />

  <main class="min-h-screen bg-[#faf8f3]">
    <section class="bg-gradient-to-r from-amber-600 to-rose-600 text-white py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl sm:text-5xl font-bold mb-5">
          рд╢реНрд░реА рдЬрд╛рдирдХреА рдорд╣рд▓ рдЯреНрд░рд╕реНрдЯ <span class="text-amber-200">рд╕реБрд╡рд┐рдзрд╛рдПрдБ</span>
        </h1>
        <p class="text-xl max-w-3xl mx-auto">
          рд░рд╛рдо рдордВрджрд┐рд░ рдХреЗ рдкрд╛рд╕ рдард╣рд░рдиреЗ рдХреЗ рджреМрд░рд╛рди рдХреНрдпрд╛тАСрдХреНрдпрд╛ рд╢рд╛рдорд┐рд▓ рд╣реИ тАФ рднреЛрдЬрди, рд╕реБрд╡рд┐рдзрд╛рдПрдБ рдФрд░ рд╕рдкреЛрд░реНрдЯред
        </p>
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/hi/booking"
            class="px-8 py-4 bg-white text-amber-700 font-bold rounded-lg hover:bg-gray-100 transition-colors text-lg"
          >
            рдмреБрдХрд┐рдВрдЧ рдкреЗрдЬ
          </a>
          <a
            href={WHATSAPP_BOOKING_LINK_HI}
            target="_blank"
            rel="noopener noreferrer"
            class="px-8 py-4 bg-green-600 text-white font-bold rounded-lg hover:bg-green-700 transition-colors text-lg"
          >
            WhatsApp рдмреБрдХрд┐рдВрдЧ
          </a>
        </div>
      </div>
    </section>

    <section class="py-14 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid gap-6 md:grid-cols-2">
          {amenities.map((a) => (
            <div class="rounded-3xl border border-gray-100 bg-white p-8 shadow-sm">
              <div class="flex items-start gap-4">
                <div class="text-4xl">{a.icon}</div>
                <div>
                  <h2 class="text-2xl font-bold text-gray-900">{a.title}</h2>
                  <ul class="mt-4 space-y-2 text-gray-800">
                    {a.points.map((p) => (
                      <li>
                        <span class="text-green-700 font-semibold">тЬУ</span> {p}
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="mt-14 rounded-3xl bg-gray-50 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-3">рд╕рдВрдмрдВрдзрд┐рдд рдкреЗрдЬ</h2>
          <div class="grid gap-4 sm:grid-cols-2">
            <a
              href="/hi/room-prices"
              class="rounded-xl bg-white px-6 py-4 text-gray-900 font-semibold border border-gray-200 hover:border-amber-300 transition-colors"
            >
              рд░реВрдо рдкреНрд░рд╛рдЗрд╕/рдЯреИрд░рд┐рдл тЖТ
            </a>
            <a
              href="/hi/rooms"
              class="rounded-xl bg-white px-6 py-4 text-gray-900 font-semibold border border-gray-200 hover:border-amber-300 transition-colors"
            >
              рд░реВрдо рдбрд┐рдЯреЗрд▓реНрд╕ тЖТ
            </a>
            <a
              href="/hi/official-booking"
              class="rounded-xl bg-white px-6 py-4 text-gray-900 font-semibold border border-gray-200 hover:border-amber-300 transition-colors"
            >
              рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рдмреБрдХрд┐рдВрдЧ рд╡реЗрд░рд┐рдлрд┐рдХреЗрд╢рди тЖТ
            </a>
            <a
              href="/hi/contact-number"
              class="rounded-xl bg-white px-6 py-4 text-gray-900 font-semibold border border-gray-200 hover:border-amber-300 transition-colors"
            >
              рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рд╕рдВрдкрд░реНрдХ рдирдВрдмрд░ тЖТ
            </a>
          </div>
        </div>

        <div class="mt-14 rounded-3xl border border-amber-200 bg-amber-50 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-3">рдЗрдиреНрдХреНрд▓реВрдЬрди рдХрдиреНрдлрд░реНрдо рдХрд░рдирд╛ рд╣реИ?</h2>
          <p class="text-gray-800 leading-relaxed">
            рдЕрдВрддрд┐рдо рдЗрдиреНрдХреНрд▓реВрдЬрди/рдЯреИрд░рд┐рдл рдбреЗрдЯреНрд╕ рдХреЗ рдЕрдиреБрд╕рд╛рд░ рдмрджрд▓ рд╕рдХрддреЗ рд╣реИрдВред рдХрдиреНрдлрд░реНрдореЗрд╢рди рдХреЗ рд▓рд┐рдП{' '}
            <a class="font-semibold underline underline-offset-2" href={TEL_LINK}>
              {DISPLAY_PHONE}
            </a>{' '}
            рдкрд░ рд╕рдВрдкрд░реНрдХ рдХрд░реЗрдВред
          </p>
        </div>
      </div>
    </section>

    <section class="py-14 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">FAQs</h2>
        <div class="space-y-6">
          {faqs.map((faq, index) => (
            <div class="rounded-2xl border border-gray-100 bg-gray-50 p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">
                <span class="text-amber-700">Q{index + 1}.</span> {faq.question}
              </h3>
              <p class="text-gray-800 leading-relaxed">{faq.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
  {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}

  <Footer />
  <FloatingWhatsApp />
</Layout>

