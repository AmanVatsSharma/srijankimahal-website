---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingWhatsApp from '../../components/FloatingWhatsApp.astro';

import { MOBILE_NUMBER, DISPLAY_PHONE } from '../../lib/constants';

const officialPhone = `+91${MOBILE_NUMBER}`;
const displayPhone = DISPLAY_PHONE;

const contactStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  '@id': 'https://www.srijanakimahaltrustofficial.com/hi/contact-number',
  name: 'Sri Janaki Mahal Trust Official Contact Number (Hindi)',
  inLanguage: 'hi-IN',
  description:
    'Sri Janaki Mahal Trust (Janaki Mahal Trust / Sri Janki Mahal Trust / Shri Janki Mahal Trust) का आधिकारिक संपर्क नंबर। सत्यापित बुकिंग के लिए कॉल/WhatsApp करें।',
  url: 'https://www.srijanakimahaltrustofficial.com/hi/contact-number',
  mainEntity: {
    '@type': 'Organization',
    name: 'Sri Janaki Mahal Trust',
    alternateName: [
      'Janaki Mahal Trust',
      'Sri Janki Mahal Trust',
      'Shri Janki Mahal Trust',
      'Janki Mahal Trust Ayodhya',
      'Shri Janaki Mahal Trust',
      'Janaki Mahal',
      'Sri Janki Mahal',
    ],
    contactPoint: [
      {
        '@type': 'ContactPoint',
        telephone: displayPhone,
        contactType: 'booking',
        areaServed: 'IN',
        availableLanguage: ['Hindi', 'English'],
        url: 'https://www.srijanakimahaltrustofficial.com/hi/contact-number',
        productSupported: 'Room Booking',
        hoursAvailable: 'Mo-Su 00:00-23:59',
      },
    ],
  },
};

const faqStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: [
    {
      '@type': 'Question',
      name: 'जनकी महल ट्रस्ट का आधिकारिक संपर्क नंबर क्या है?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'Sri Janaki Mahal Trust का आधिकारिक संपर्क नंबर +91 7759925612 है। सत्यापित बुकिंग के लिए इसी नंबर का उपयोग करें।',
      },
    },
    {
      '@type': 'Question',
      name: 'क्या WhatsApp नंबर भी यही है?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'हाँ, WhatsApp नंबर भी वही है: +91 7759925612। आप कॉल या संदेश कभी भी कर सकते हैं।',
      },
    },
    {
      '@type': 'Question',
      name: 'फर्जी एजेंट से कैसे बचें?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'हमेशा +91 7759925612 से ही बात करें और ट्रस्ट-सील वाला कन्फर्मेशन मांगें। अज्ञात नंबरों/लिंक्स पर भुगतान न करें।',
      },
    },
  ],
};
---

<Layout
  title="आधिकारिक संपर्क नंबर | श्री जानकी महल ट्रस्ट (अयोध्या)"
  description="Sri Janaki Mahal Trust (Janaki Mahal Trust / Sri Janki Mahal Trust) का सत्यापित आधिकारिक नंबर। कॉल/WhatsApp +91 7759925612।"
  keywords={[
    'जनकी महल ट्रस्ट संपर्क नंबर',
    'श्री जंकी महल ट्रस्ट नंबर',
    'आधिकारिक बुकिंग नंबर',
    'अयोध्या होटल संपर्क',
    'janaki mahal trust official number',
  ]}
  canonical="/hi/contact-number"
  ogImage="/og.jpg"
  lang="hi"
>
  <Header />

  <main class="bg-[#faf8f3] py-12">
    <div class="mx-auto flex max-w-6xl flex-col gap-12 px-4 sm:px-6 lg:px-8">
      <section class="rounded-3xl bg-gradient-to-r from-[#f4ecdf] to-[#f9e4c8] p-8 shadow-lg">
        <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
          <div class="space-y-4">
            <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#6b4c2d]">Verified Trust Helpline</p>
            <h1 class="text-4xl font-bold text-[#2d2215] md:text-5xl">आधिकारिक संपर्क नंबर</h1>
            <p class="text-lg leading-relaxed text-[#3d2f1c]">
              सत्यापित बुकिंग और सहायता के लिए केवल आधिकारिक नंबर का उपयोग करें।
            </p>
          </div>
          <div class="rounded-2xl bg-white p-6 text-center shadow-md">
            <p class="text-sm uppercase tracking-[0.2em] text-[#b45309]">Call Or WhatsApp Now</p>
            <a class="mt-3 block text-3xl font-extrabold text-[#2d2215] hover:text-[#b45309]" href={`tel:${officialPhone}`}>
              {displayPhone}
            </a>
            <div class="mt-4 flex flex-col gap-3">
              <a class="rounded-xl bg-[#b45309] px-6 py-3 text-base font-semibold text-white transition hover:bg-[#9a3f00]" href={`tel:${officialPhone}`}>
                कॉल करें
              </a>
              <a class="rounded-xl border border-[#b45309] px-6 py-3 text-base font-semibold text-[#b45309] transition hover:bg-[#fce9d5]" href={`https://wa.me/${officialPhone}`}>
                WhatsApp करें
              </a>
            </div>
          </div>
        </div>
      </section>

      <section class="rounded-3xl bg-white p-8 shadow-md">
        <h2 class="text-3xl font-semibold text-[#2d2215]">नाम/स्पेलिंग के सभी वेरिएशन</h2>
        <p class="mt-4 text-base leading-relaxed text-[#3d2f1c]">
          आप हमें Janaki Mahal Trust, Sri Janki Mahal Trust या Shri Janki Mahal Trust के नाम से खोजें—आधिकारिक संपर्क हमेशा यही है।
        </p>
        <div class="mt-6 grid gap-4 md:grid-cols-2">
          <div class="rounded-2xl bg-[#faf0df] p-6">
            <h3 class="text-2xl font-semibold text-[#2d2215]">क्विक लिंक्स</h3>
            <ul class="mt-3 space-y-2 text-base text-[#3d2f1c]">
              <li><a class="text-amber-700 font-semibold hover:underline" href="/hi/official-booking">आधिकारिक बुकिंग</a></li>
              <li><a class="text-amber-700 font-semibold hover:underline" href="/hi/booking">बुकिंग पेज</a></li>
              <li><a class="text-amber-700 font-semibold hover:underline" href="/hi/location">लोकेशन</a></li>
            </ul>
          </div>
          <div class="rounded-2xl bg-[#faf0df] p-6">
            <h3 class="text-2xl font-semibold text-[#2d2215]">फ्रॉड से बचाव</h3>
            <p class="mt-3 text-base text-[#3d2f1c]">
              अज्ञात नंबरों से आए “बुकिंग” संदेश/लिंक्स पर भरोसा न करें। पहले आधिकारिक नंबर से सत्यापन करें।
            </p>
          </div>
        </div>
      </section>
    </div>
  </main>

  <script
    type="application/ld+json"
    set:html={JSON.stringify([contactStructuredData, faqStructuredData], null, 2)}
  />

  <Footer />
  <FloatingWhatsApp />
</Layout>

