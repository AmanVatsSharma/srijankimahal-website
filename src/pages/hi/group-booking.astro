---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingWhatsApp from '../../components/FloatingWhatsApp.astro';
import { generateBreadcrumbSchema } from '../../lib/schemas/breadcrumb';
import { generateFAQSchema, type FAQItem } from '../../lib/schemas/faq';
import { DISPLAY_PHONE, TEL_LINK, WHATSAPP_LINK, WHATSAPP_BOOKING_LINK_HI } from '../../lib/constants';

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: '/hi' },
  { name: 'Group Booking', url: '/hi/group-booking' },
]);

const whatsappGroupMessageHi = encodeURIComponent(
  `नमस्ते श्री जानकी महल ट्रस्ट, मुझे ग्रुप के लिए रूम बुक करने हैं।\n\nतारीखें:\nमेहमान (कुल):\nरूम प्रेफरेंस (2/3/4 बेड, AC/Non-AC):\nकोऑर्डिनेटर नाम व नंबर:\nआगमन समय:\n\nकृपया उपलब्धता और अंतिम टैरिफ कन्फर्म करें।`
);
const whatsappGroupLinkHi = `${WHATSAPP_LINK}?text=${whatsappGroupMessageHi}`;

const faqs: FAQItem[] = [
  {
    question: 'यात्री/ग्रुप बुकिंग कैसे करें?',
    answer:
      'आधिकारिक नंबर पर कॉल/WhatsApp करके तारीखें, कुल मेहमान, रूम टाइप और एक कोऑर्डिनेटर नंबर शेयर करें। टीम उपलब्धता और अंतिम टैरिफ कन्फर्मेशन में बताती है।',
  },
  {
    question: 'ग्रुप के लिए कौन‑सा रूम टाइप बेहतर है?',
    answer:
      'ग्रुप में 4‑बेड रूम उपयुक्त रहते हैं। मिक्स्ड फैमिली ग्रुप में 2‑बेड/3‑बेड का कॉम्बिनेशन भी बेहतर हो सकता है।',
  },
  {
    question: 'पहले मैसेज में क्या‑क्या भेजें?',
    answer:
      'तारीखें, मेहमानों की संख्या, रूम प्रेफरेंस, आगमन समय और एक कोऑर्डिनेटर नंबर भेजें। इससे कन्फर्मेशन तेज होता है।',
  },
];

const faqSchema = generateFAQSchema(faqs);
---

<Layout
  title="ग्रुप बुकिंग - श्री जानकी महल ट्रस्ट | यात्री मंडल/फैमिली ग्रुप (अयोध्या)"
  description={`श्री जानकी महल ट्रस्ट में ग्रुप/यात्री मंडल बुकिंग। चेकलिस्ट, सुझाए गए रूम टाइप और आधिकारिक प्रक्रिया। हेल्पलाइन: ${DISPLAY_PHONE}.`}
  keywords={[
    'ग्रुप बुकिंग अयोध्या',
    'यात्री मंडल बुकिंग',
    'जनकी महल ट्रस्ट ग्रुप रूम',
    'राम मंदिर के पास ग्रुप स्टे',
  ]}
  canonical="/hi/group-booking"
  ogImage="/og.jpg"
  lang="hi"
>
  <Header />

  <main class="min-h-screen bg-[#faf8f3]">
    <section class="bg-gradient-to-r from-amber-600 to-rose-600 text-white py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl sm:text-5xl font-bold mb-5">
          श्री जानकी महल ट्रस्ट <span class="text-amber-200">ग्रुप बुकिंग</span>
        </h1>
        <p class="text-xl max-w-3xl mx-auto">
          यात्री मंडल/फैमिली ग्रुप के लिए आधिकारिक चैनल से सत्यापित बुकिंग कराएं।
        </p>
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={TEL_LINK}
            class="px-8 py-4 bg-white text-amber-700 font-bold rounded-lg hover:bg-gray-100 transition-colors text-lg"
          >
            कॉल: {DISPLAY_PHONE}
          </a>
          <a
            href={whatsappGroupLinkHi}
            target="_blank"
            rel="noopener noreferrer"
            class="px-8 py-4 bg-green-600 text-white font-bold rounded-lg hover:bg-green-700 transition-colors text-lg"
          >
            WhatsApp ग्रुप बुकिंग
          </a>
        </div>
        <p class="mt-4 text-sm text-amber-100">
          सामान्य WhatsApp बुकिंग के लिए{' '}
          <a class="underline" href={WHATSAPP_BOOKING_LINK_HI} target="_blank" rel="noopener noreferrer">
            यहाँ क्लिक करें
          </a>
          ।
        </p>
      </div>
    </section>

    <section class="py-14 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid gap-6 lg:grid-cols-2">
          <div class="rounded-3xl border border-gray-100 bg-white p-8 shadow-sm">
            <h2 class="text-2xl font-bold text-gray-900 mb-3">ग्रुप बुकिंग चेकलिस्ट</h2>
            <ul class="mt-4 space-y-2 text-gray-800">
              <li><span class="text-green-700 font-semibold">✓</span> तारीखें (चेक‑इन/चेक‑आउट)</li>
              <li><span class="text-green-700 font-semibold">✓</span> कुल मेहमान (एडल्ट + बच्चे)</li>
              <li><span class="text-green-700 font-semibold">✓</span> रूम प्रेफरेंस (2/3/4 बेड, AC/Non‑AC)</li>
              <li><span class="text-green-700 font-semibold">✓</span> एक कोऑर्डिनेटर नाम + नंबर</li>
              <li><span class="text-green-700 font-semibold">✓</span> आगमन समय</li>
            </ul>
            <p class="mt-4 text-sm text-gray-600">
              स्कैम से बचने के लिए देखें:
              <a class="underline underline-offset-2" href="/hi/official-booking">आधिकारिक बुकिंग</a> और
              <a class="underline underline-offset-2" href="/hi/booking-verification-guide">वेरिफिकेशन गाइड</a>.
            </p>
          </div>

          <div class="rounded-3xl border border-amber-200 bg-amber-50 p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-3">ग्रुप के लिए सुझाए गए रूम</h2>
            <div class="mt-4 grid gap-4 sm:grid-cols-2">
              <a
                href="/hi/rooms/4-bed-non-ac"
                class="rounded-2xl bg-white border border-gray-200 p-5 hover:border-amber-300 transition-colors"
              >
                <h3 class="font-bold text-gray-900">4 बेड Non‑AC</h3>
                <p class="text-gray-700 text-sm mt-1">बजट ग्रुप स्टे</p>
              </a>
              <a
                href="/hi/rooms/4-bed-ac"
                class="rounded-2xl bg-white border border-gray-200 p-5 hover:border-amber-300 transition-colors"
              >
                <h3 class="font-bold text-gray-900">4 बेड AC</h3>
                <p class="text-gray-700 text-sm mt-1">कम्फर्ट ग्रुप स्टे</p>
              </a>
              <a
                href="/hi/rooms/3-bed-non-ac"
                class="rounded-2xl bg-white border border-gray-200 p-5 hover:border-amber-300 transition-colors"
              >
                <h3 class="font-bold text-gray-900">3 बेड Non‑AC</h3>
                <p class="text-gray-700 text-sm mt-1">मिक्स्ड फैमिली</p>
              </a>
              <a
                href="/hi/rooms/2-bed-ac"
                class="rounded-2xl bg-white border border-gray-200 p-5 hover:border-amber-300 transition-colors"
              >
                <h3 class="font-bold text-gray-900">2 बेड AC</h3>
                <p class="text-gray-700 text-sm mt-1">छोटा परिवार/कपल</p>
              </a>
            </div>
            <p class="mt-4 text-sm text-gray-700">
              टैरिफ रेंज देखें: <a class="underline underline-offset-2" href="/hi/room-prices">रूम प्राइस</a>.
            </p>
          </div>
        </div>

        <div class="mt-14 rounded-3xl bg-gray-50 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-3">पहला WhatsApp संदेश (कॉपी/पेस्ट)</h2>
          <pre class="mt-4 whitespace-pre-wrap rounded-2xl bg-white border border-gray-200 p-6 text-gray-900 text-sm leading-relaxed">
नमस्ते श्री जानकी महल ट्रस्ट, मुझे ग्रुप के लिए रूम बुक करने हैं।

तारीखें:
मेहमान (कुल):
रूम प्रेफरेंस (2/3/4 बेड, AC/Non-AC):
कोऑर्डिनेटर नाम व नंबर:
आगमन समय:

कृपया उपलब्धता और अंतिम टैरिफ कन्फर्म करें।
          </pre>
          <div class="mt-6 flex flex-col sm:flex-row gap-3">
            <a
              href={whatsappGroupLinkHi}
              target="_blank"
              rel="noopener noreferrer"
              class="flex-1 rounded-xl bg-green-600 px-6 py-3 text-white font-semibold hover:bg-green-700 transition-colors text-center"
            >
              WhatsApp भेजें
            </a>
            <a
              href="/hi/booking"
              class="flex-1 rounded-xl border border-[#2d2215] px-6 py-3 text-[#2d2215] font-semibold hover:bg-[#f4ecdf] transition-colors text-center"
            >
              बुकिंग पेज
            </a>
          </div>
        </div>
      </div>
    </section>

    <section class="py-14 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">FAQs</h2>
        <div class="space-y-6">
          {faqs.map((faq, index) => (
            <div class="rounded-2xl border border-gray-100 bg-gray-50 p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">
                <span class="text-amber-700">Q{index + 1}.</span> {faq.question}
              </h3>
              <p class="text-gray-800 leading-relaxed">{faq.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
  {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}

  <Footer />
  <FloatingWhatsApp />
</Layout>

