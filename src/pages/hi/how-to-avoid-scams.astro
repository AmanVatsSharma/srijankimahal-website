---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingWhatsApp from '../../components/FloatingWhatsApp.astro';
import { generateBreadcrumbSchema } from '../../lib/schemas/breadcrumb';
import { generateFAQSchema, type FAQItem } from '../../lib/schemas/faq';
import { DISPLAY_PHONE, OFFICIAL_EMAIL } from '../../lib/constants';

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: '/hi' },
  { name: 'Avoid Scams', url: '/hi/how-to-avoid-scams' },
]);

const faqs: FAQItem[] = [
  {
    question: 'फर्जी जनकी महल ट्रस्ट बुकिंग से कैसे बचें?',
    answer: `केवल आधिकारिक चैनल इस्तेमाल करें: कॉल/WhatsApp ${DISPLAY_PHONE}, ईमेल ${OFFICIAL_EMAIL}, और यह वेबसाइट। यदि कोई दूसरे नंबर से संपर्क करे, भुगतान न करें—पहले आधिकारिक हेल्पलाइन पर सत्यापन करें।`,
  },
  {
    question: 'आधिकारिक कन्फर्मेशन में क्या होना चाहिए?',
    answer:
      'कन्फर्मेशन में नाम, तारीखें, रूम टाइप, कुल राशि, चेक-इन/चेक-आउट समय और स्पष्ट विवरण होने चाहिए। संदेह हो तो आधिकारिक नंबर पर पुनः सत्यापित करें।',
  },
  {
    question: 'क्या आप थर्ड-पार्टी एजेंट्स के जरिए बुकिंग करते हैं?',
    answer: 'नहीं। फ्रॉड रिस्क कम करने के लिए बुकिंग सीधे ट्रस्ट की आधिकारिक टीम के साथ ही करें।',
  },
  {
    question: 'यदि मैंने अनजान नंबर पर भुगतान कर दिया हो तो क्या करें?',
    answer:
      'तुरंत अपने बैंक/UPI प्रदाता को सूचित करें और ट्रांजैक्शन रिपोर्ट करें। फिर आधिकारिक हेल्पलाइन पर कॉल करके ट्रस्ट टीम को जानकारी दें।',
  },
];

const faqSchema = generateFAQSchema(faqs);
---

<Layout
  title="फर्जी बुकिंग से बचें | श्री जानकी महल ट्रस्ट - स्कैम प्रिवेंशन गाइड"
  description={`Sri Janaki Mahal Trust की बुकिंग करते समय स्कैम से बचें। आधिकारिक सत्यापन: ${DISPLAY_PHONE}.`}
  keywords={[
    'फर्जी बुकिंग से कैसे बचें',
    'जनकी महल ट्रस्ट स्कैम',
    'बुकिंग सत्यापन अयोध्या',
    'official booking verification',
    'janaki mahal trust official contact number',
  ]}
  canonical="/hi/how-to-avoid-scams"
  ogImage="/og.jpg"
  lang="hi"
>
  <Header />

  <main class="min-h-screen bg-[#faf8f3] py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-3xl shadow-lg p-8 sm:p-10">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">फर्जी बुकिंग से कैसे बचें</h1>
        <p class="text-lg text-gray-700 leading-relaxed">
          कई भक्त “Janaki Mahal Trust”, “Sri Janki Mahal Trust” या “Shri Janki Mahal Trust” खोजते समय अनजान मध्यस्थों तक पहुँच जाते हैं।
          यह गाइड आपको आधिकारिक ट्रस्ट से बुकिंग सत्यापित करने में मदद करता है।
        </p>

        <div class="mt-8 rounded-2xl border border-amber-200 bg-amber-50 p-6">
          <h2 class="text-2xl font-semibold text-gray-900 mb-3">आधिकारिक सत्यापन (सबसे तेज़)</h2>
          <ul class="list-disc pl-6 text-gray-800 space-y-2">
            <li>
              कॉल/WhatsApp: <a class="text-amber-700 font-semibold hover:underline" href="tel:+918936059096">{DISPLAY_PHONE}</a>
            </li>
            <li>
              ईमेल: <a class="text-amber-700 font-semibold hover:underline" href={`mailto:${OFFICIAL_EMAIL}`}>{OFFICIAL_EMAIL}</a>
            </li>
            <li>
              आधिकारिक पेज: <a class="text-amber-700 font-semibold hover:underline" href="/hi/official">Verify</a>,{' '}
              <a class="text-amber-700 font-semibold hover:underline" href="/hi/official-booking">Official booking</a>
            </li>
          </ul>
        </div>

        <h2 class="mt-10 text-2xl font-semibold text-gray-900">रेड फ्लैग्स (मत करें)</h2>
        <ul class="mt-4 grid gap-3 sm:grid-cols-2 text-gray-800">
          <li class="rounded-xl border border-gray-200 p-4">{DISPLAY_PHONE} के अलावा कोई दूसरा नंबर</li>
          <li class="rounded-xl border border-gray-200 p-4">कन्फर्मेशन से पहले “तुरंत भुगतान” का दबाव</li>
          <li class="rounded-xl border border-gray-200 p-4">पर्सनल अकाउंट/अनजान UPI पर भुगतान</li>
          <li class="rounded-xl border border-gray-200 p-4">लिखित कन्फर्मेशन/डिटेल्स अस्पष्ट</li>
        </ul>

        <h2 class="mt-10 text-2xl font-semibold text-gray-900">सेफ बुकिंग फ्लो</h2>
        <ol class="mt-4 list-decimal pl-6 text-gray-800 space-y-2">
          <li>आधिकारिक नंबर पर कॉल/WhatsApp करके तारीखें + मेहमान + रूम टाइप बताएं।</li>
          <li>उपलब्धता/टैरिफ कन्फर्म करें।</li>
          <li>स्पष्ट कन्फर्मेशन संदेश/डिटेल्स प्राप्त करें।</li>
          <li>केवल कन्फर्मेशन के बाद ही भुगतान करें।</li>
          <li>चेक-इन के लिए कन्फर्मेशन सुरक्षित रखें।</li>
        </ol>

        <div class="mt-10 grid gap-4 sm:grid-cols-2">
          <a
            href="/hi/booking-verification-guide"
            class="rounded-xl bg-[#2d2215] px-6 py-4 text-white font-semibold hover:bg-[#b45309] transition-colors text-center"
          >
            बुकिंग सत्यापन गाइड
          </a>
          <a
            href="/hi/contact-number"
            class="rounded-xl border border-[#2d2215] px-6 py-4 text-[#2d2215] font-semibold hover:bg-[#f4ecdf] transition-colors text-center"
          >
            आधिकारिक संपर्क पेज
          </a>
        </div>
      </div>

      {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}
      {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
    </div>
  </main>

  <Footer />
  <FloatingWhatsApp />
</Layout>

