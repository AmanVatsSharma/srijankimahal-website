<!-- // src/pages/hi/location/ayodhya.astro -->
---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { generateBreadcrumbSchema } from '../../../lib/schemas/breadcrumb';

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: '/hi' },
  { name: 'Location', url: '/hi/location' },
  { name: 'Ayodhya', url: '/hi/location/ayodhya' },
]);
---

<Layout
  title="अयोध्या गाइड | श्री जानकी महल ट्रस्ट - लोकेशन और यात्रा"
  description="अयोध्या यात्रा गाइड: राम मंदिर, प्रमुख स्थल, और श्री जानकी महल ट्रस्ट तक कैसे पहुँचे।"
  keywords={[
    'अयोध्या यात्रा गाइड',
    'राम मंदिर दर्शन',
    'ayodhya travel guide',
    'janaki mahal trust ayodhya',
  ]}
  canonical="/hi/location/ayodhya"
  ogType="website"
  ogImage="/og.jpg"
  lang="hi"
>
  <Header />

  <main class="min-h-screen bg-[#faf8f3]">
    <section class="bg-gradient-to-r from-amber-600 to-rose-600 text-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl sm:text-5xl font-bold mb-6">
          <span class="text-amber-200">अयोध्या</span> — यात्रा गाइड
        </h1>
        <p class="text-xl mb-8 max-w-3xl mx-auto">
          राम मंदिर और प्रमुख तीर्थ स्थलों के लिए उपयोगी जानकारी
        </p>
      </div>
    </section>

    <section class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">अयोध्या के बारे में</h2>
        <p class="text-lg text-gray-700 mb-6 leading-relaxed">
          अयोध्या हिंदू धर्म की पवित्र नगरी है और भगवान श्रीराम की जन्मभूमि के लिए प्रसिद्ध है। यहाँ वर्ष भर भक्तों का आगमन होता है।
        </p>
        <p class="text-lg text-gray-700 mb-10 leading-relaxed">
          श्री जानकी महल ट्रस्ट कारसेवकपुरम क्षेत्र में स्थित है और राम मंदिर के लिए सुविधाजनक है।
        </p>

        <div class="grid md:grid-cols-2 gap-12">
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">कैसे पहुँचे</h3>
            <ul class="list-disc pl-6 text-gray-800 space-y-2">
              <li>ट्रेन: Ayodhya Station / Ayodhya Junction</li>
              <li>रोड: लखनऊ/वाराणसी/दिल्ली से सड़क मार्ग</li>
              <li>एयर: लखनऊ एयरपोर्ट (अक्सर उपयोग) → अयोध्या</li>
            </ul>
            <div class="mt-4 space-y-2">
              <a class="text-amber-700 font-semibold hover:underline" href="/hi/location/from-ayodhya-junction">स्टेशन से दिशा</a>
              <br />
              <a class="text-amber-700 font-semibold hover:underline" href="/hi/location/from-airport">एयरपोर्ट से दिशा</a>
            </div>
          </div>
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">मुख्य स्थल</h3>
            <ul class="list-disc pl-6 text-gray-800 space-y-2">
              <li>राम मंदिर</li>
              <li>हनुमान गढ़ी</li>
              <li>कनक भवन</li>
              <li>सरयू नदी</li>
            </ul>
          </div>
        </div>

        <div class="mt-12 bg-gradient-to-r from-amber-600 to-rose-600 rounded-lg p-8 text-white text-center">
          <h2 class="text-3xl font-bold mb-4">अयोध्या में ठहरने के लिए बुक करें</h2>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/hi/booking" class="px-8 py-4 bg-white text-amber-700 font-bold rounded-lg hover:bg-gray-100 transition-colors">
              बुकिंग पेज
            </a>
            <a href="/hi/contact-number" class="px-8 py-4 bg-green-600 text-white font-bold rounded-lg hover:bg-green-700 transition-colors">
              आधिकारिक संपर्क
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
  <Footer />
</Layout>

