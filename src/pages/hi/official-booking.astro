<!-- // src/pages/hi/official-booking.astro -->
---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingWhatsApp from '../../components/FloatingWhatsApp.astro';
import { generateBreadcrumbSchema } from '../../lib/schemas/breadcrumb';
import { generateReservationActionSchema, generateBookActionSchema } from '../../lib/schemas/booking';
import { generateFAQSchema, type FAQItem } from '../../lib/schemas/faq';

const officialPhone = '+918460839199';
const displayPhone = '+91 8460839199';
const officialBookingUrl = 'https://www.srijanakimahaltrustofficial.com/hi/official-booking';

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: '/hi' },
  { name: 'Official Booking', url: '/hi/official-booking' },
]);

const reservationActionSchema = generateReservationActionSchema(officialBookingUrl, `tel:${officialPhone}`, 'Sri Janaki Mahal Trust');
const bookActionSchema = generateBookActionSchema(officialBookingUrl);

const officialBookingFAQs: FAQItem[] = [
  {
    question: 'рдЬрдирдХреА рдорд╣рд▓ рдЯреНрд░рд╕реНрдЯ рдХреА рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рдмреБрдХрд┐рдВрдЧ рдХреИрд╕реЗ рдХрд░реЗрдВ?',
    answer:
      'рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рд╣реЗрд▓реНрдкрд▓рд╛рдЗрди +91 8460839199 рдкрд░ рдХреЙрд▓ рдХрд░реЗрдВ рдпрд╛ рдЙрд╕реА рдирдВрдмрд░ рдкрд░ WhatsApp рдХрд░реЗрдВред рдЯреАрдо рдЙрдкрд▓рдмреНрдзрддрд╛ рдХреЗ рдмрд╛рдж рдЯреНрд░рд╕реНрдЯ-рд╕реНрдЯреИрдореНрдкреНрдб рдХрдиреНрдлрд░реНрдореЗрд╢рди рднреЗрдЬрддреА рд╣реИред',
  },
  {
    question: 'рдХреНрдпрд╛ рдпрд╣ рд╢реНрд░реА рдЬрд╛рдирдХреА рдорд╣рд▓ рдЯреНрд░рд╕реНрдЯ рдХреА рд╕рддреНрдпрд╛рдкрд┐рдд рдмреБрдХрд┐рдВрдЧ рдкреЗрдЬ рд╣реИ?',
    answer:
      'рд╣рд╛рдБред рдпрд╣ Sri Janaki Mahal Trust (Janaki Mahal Trust / Sri Janki Mahal Trust / Shri Janki Mahal Trust) рдХрд╛ рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рдмреБрдХрд┐рдВрдЧ рдкреЗрдЬ рд╣реИред',
  },
  {
    question: 'рдореИрдВ рдЕрдкрдиреА рдмреБрдХрд┐рдВрдЧ рдХреЛ рдЕрд╕рд▓реА рдХреИрд╕реЗ рд╕рддреНрдпрд╛рдкрд┐рдд рдХрд░реВрдБ?',
    answer:
      'рдЕрд╕рд▓реА рдмреБрдХрд┐рдВрдЧ рдореЗрдВ рдЯреНрд░рд╕реНрдЯ рд╕реАрд▓/рдмреБрдХрд┐рдВрдЧ рдЖрдИрдбреА, рдореЗрд╣рдорд╛рди рд╡рд┐рд╡рд░рдг рдФрд░ рдЪреЗрдХ-рдЗрди рд╕рдордп рд╣реЛрддрд╛ рд╣реИред рдХрдиреНрдлрд░реНрдореЗрд╢рди рд╣рдореЗрд╢рд╛ +91 8460839199 рдпрд╛ рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рдИрдореЗрд▓ рд╕реЗ рдЖрддрд╛ рд╣реИред',
  },
  {
    question: 'рдПрдбрд╡рд╛рдВрд╕ рдкреЗрдореЗрдВрдЯ рдХреИрд╕реЗ рдХрд░реЗрдВ?',
    answer:
      'рдЙрдкрд▓рдмреНрдзрддрд╛ рдХрдиреНрдлрд░реНрдо рд╣реЛрдиреЗ рдХреЗ рдмрд╛рдж рд╣реА рдЖрдзрд┐рдХрд╛рд░рд┐рдХ WhatsApp/рдИрдореЗрд▓ рд╕реЗ рдкреЗрдореЗрдВрдЯ рдирд┐рд░реНрджреЗрд╢ рд╕рд╛рдЭрд╛ рдХрд┐рдП рдЬрд╛рддреЗ рд╣реИрдВред рдЕрдЬреНрдЮрд╛рдд рдирдВрдмрд░реЛрдВ рд╕реЗ рдЖрдП рд▓рд┐рдВрдХ рдкрд░ рднреБрдЧрддрд╛рди рди рдХрд░реЗрдВред',
  },
];

const faqSchema = generateFAQSchema(officialBookingFAQs);
---

<Layout
  title="рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рдмреБрдХрд┐рдВрдЧ | рд╢реНрд░реА рдЬрд╛рдирдХреА рдорд╣рд▓ рдЯреНрд░рд╕реНрдЯ (рдЬрдирдХреА рдорд╣рд▓ рдЯреНрд░рд╕реНрдЯ) - рд╕рддреНрдпрд╛рдкрд┐рдд"
  description="Sri Janaki Mahal Trust (Janaki Mahal Trust / Shri Janki Mahal Trust Ayodhya) рдХреА рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рдмреБрдХрд┐рдВрдЧред рд╕рддреНрдпрд╛рдкрд┐рдд рд╣реЗрд▓реНрдкрд▓рд╛рдЗрди +91 8460839199 рд╕реЗ рд╕реАрдзреЗ рдмреБрдХ рдХрд░реЗрдВред"
  keywords={[
    'рдЬрдирдХреА рдорд╣рд▓ рдЯреНрд░рд╕реНрдЯ рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рдмреБрдХрд┐рдВрдЧ',
    'рд╢реНрд░реА рдЬрдВрдХреА рдорд╣рд▓ рдЯреНрд░рд╕реНрдЯ рдмреБрдХрд┐рдВрдЧ',
    'рд╕рддреНрдпрд╛рдкрд┐рдд рдмреБрдХрд┐рдВрдЧ рдЕрдпреЛрдзреНрдпрд╛',
    'рд░рд╛рдо рдордВрджрд┐рд░ рдХреЗ рдкрд╛рд╕ рд░реВрдо рдмреБрдХрд┐рдВрдЧ',
    'official janaki mahal trust booking',
  ]}
  canonical="/hi/official-booking"
  ogImage="/og.jpg"
  lang="hi"
>
  <Header />

  <main class="bg-[#faf8f3] py-12">
    <div class="mx-auto flex max-w-6xl flex-col gap-12 px-4 sm:px-6 lg:px-8">
      <section class="rounded-3xl bg-gradient-to-br from-[#fde6c8] via-[#f9d9b3] to-[#f1c89a] p-10 shadow-xl">
        <p class="text-xs font-semibold uppercase tracking-[0.4em] text-[#744016]">Official Booking</p>
        <h1 class="mt-4 text-4xl font-bold text-[#2d2215] md:text-5xl">
          рд╢реНрд░реА рдЬрд╛рдирдХреА рдорд╣рд▓ рдЯреНрд░рд╕реНрдЯ тАФ 100% рд╕рддреНрдпрд╛рдкрд┐рдд рдмреБрдХрд┐рдВрдЧ
        </h1>
        <p class="mt-6 text-lg leading-relaxed text-[#3d2f1c]">
          рдлрд░реНрдЬреА рдПрдЬреЗрдВрдЯреНрд╕ рд╕реЗ рдмрдЪреЗрдВред рдпрд╣ Sri Janaki Mahal Trust (Janaki Mahal Trust / Sri Janki Mahal Trust / Shri Janki Mahal Trust) рдХрд╛ рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рдмреБрдХрд┐рдВрдЧ рдкреЗрдЬ рд╣реИред
          рд╡рд╛рд╕реНрддрд╡рд┐рдХ рдЙрдкрд▓рдмреНрдзрддрд╛ рдФрд░ рдХрдиреНрдлрд░реНрдореЗрд╢рди рдХреЗ рд▓рд┐рдП рдЯреНрд░рд╕реНрдЯ рдЯреАрдо рд╕реЗ рд╕реАрдзреЗ рд╕рдВрдкрд░реНрдХ рдХрд░реЗрдВред
        </p>
        <div class="mt-8 grid gap-4 sm:grid-cols-2">
          <a class="flex items-center justify-center rounded-xl bg-[#2d2215] px-6 py-4 text-base font-semibold uppercase tracking-wide text-white transition hover:bg-[#aa4600]" href={`tel:${officialPhone}`}>
            ЁЯУЮ рдХреЙрд▓ {displayPhone}
          </a>
          <a class="flex items-center justify-center rounded-xl border border-[#2d2215] px-6 py-4 text-base font-semibold uppercase tracking-wide text-[#2d2215] transition hover:bg-[#f6dfc4]" href={`https://wa.me/${officialPhone}`}>
            ЁЯТм WhatsApp (Official)
          </a>
        </div>
      </section>

      <section class="rounded-3xl bg-white p-8 shadow-md">
        <h2 class="text-3xl font-semibold text-[#2d2215]">рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рдмреБрдХрд┐рдВрдЧ рдХреНрдпреЛрдВ рдЬрд╝рд░реВрд░реА рд╣реИ?</h2>
        <div class="mt-6 grid gap-6 md:grid-cols-2">
          <div class="rounded-2xl bg-[#fef4e4] p-6">
            <h3 class="text-2xl font-semibold text-[#2d2215]">рдЪреЗрдХрд▓рд┐рд╕реНрдЯ</h3>
            <ul class="mt-4 space-y-3 text-base text-[#3d2f1c]">
              <li>тЬУ рдХрдиреНрдлрд░реНрдореЗрд╢рди {displayPhone} / рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рдИрдореЗрд▓ рд╕реЗ</li>
              <li>тЬУ рдЯреНрд░рд╕реНрдЯ рд╕реАрд▓ рдФрд░ рдмреБрдХрд┐рдВрдЧ рдЖрдИрдбреА</li>
              <li>тЬУ рдкреЗрдореЗрдВрдЯ рдирд┐рд░реНрджреЗрд╢ рдХреЗрд╡рд▓ рд╕рддреНрдпрд╛рдкрд┐рдд рдЪреИрдирд▓ рдкрд░</li>
              <li>тЬУ рд░реВрдо рдЯрд╛рдЗрдк рдФрд░ рддрд╛рд░реАрдЦреЗрдВ рд╕реНрдкрд╖реНрдЯ</li>
            </ul>
          </div>
          <div class="rounded-2xl bg-[#fef4e4] p-6">
            <h3 class="text-2xl font-semibold text-[#2d2215]">рдлрд░реНрдЬреА рдПрдЬреЗрдВрдЯреНрд╕ рд╕реЗ рдмрдЪреЗрдВ</h3>
            <p class="mt-4 text-base leading-relaxed text-[#3d2f1c]">
              рдпрджрд┐ рдХреЛрдИ рдЕрд▓рдЧ рдирдВрдмрд░/рдЕрдирдЬрд╛рди UPI/рдкреЗрдореЗрдВрдЯ рд▓рд┐рдВрдХ рднреЗрдЬреЗ, рддреЛ рднреБрдЧрддрд╛рди рди рдХрд░реЗрдВред рдкрд╣рд▓реЗ рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рдирдВрдмрд░ рдкрд░ рдХреЙрд▓ рдХрд░рдХреЗ рд╕рддреНрдпрд╛рдкрди рдХрд░реЗрдВред
            </p>
          </div>
        </div>
      </section>

      <section class="rounded-3xl bg-[#f1e5d0] p-8 shadow-inner">
        <h2 class="text-3xl font-semibold text-[#2d2215]">рдмреБрдХрд┐рдВрдЧ рдлреНрд▓реЛ</h2>
        <div class="mt-6 grid gap-6 md:grid-cols-5">
          {[
            'рдЖрдзрд┐рдХрд╛рд░рд┐рдХ рдирдВрдмрд░ рдкрд░ рдХреЙрд▓/WhatsApp',
            'рддрд╛рд░реАрдЦреЗрдВ/рд░реВрдо рдкрд╕рдВрдж рд╕рд╛рдЭрд╛ рдХрд░реЗрдВ',
            'рдЯреАрдо рдЙрдкрд▓рдмреНрдзрддрд╛/рдХреАрдордд рдмрддрд╛рдП',
            'рдЯреНрд░рд╕реНрдЯ-рд╕реНрдЯреИрдореНрдкреНрдб рдХрдиреНрдлрд░реНрдореЗрд╢рди рдорд┐рд▓реЗ',
            'рдЪреЗрдХ-рдЗрди рдкрд░ рдХрдиреНрдлрд░реНрдореЗрд╢рди рджрд┐рдЦрд╛рдПрдВ',
          ].map((step, index) => (
            <div class="rounded-2xl bg-white p-4 text-center shadow-sm">
              <span class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-[#2d2215] text-lg font-semibold text-white">
                {index + 1}
              </span>
              <p class="mt-3 text-sm font-medium text-[#3d2f1c]">{step}</p>
            </div>
          ))}
        </div>
      </section>

      <section class="rounded-3xl bg-white p-8 shadow-md">
        <h2 class="text-3xl font-semibold text-[#2d2215]">FAQs</h2>
        <div class="mt-6 space-y-4">
          {officialBookingFAQs.map((faq) => (
            <details class="rounded-xl border border-[#ead7bf] bg-[#fef6ea] p-4">
              <summary class="cursor-pointer text-lg font-semibold text-[#2d2215]">{faq.question}</summary>
              <p class="mt-3 text-base text-[#3d2f1c]">{faq.answer}</p>
            </details>
          ))}
        </div>
      </section>
    </div>
  </main>

  {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
  {reservationActionSchema && <script type="application/ld+json" set:html={JSON.stringify(reservationActionSchema)} />}
  {bookActionSchema && <script type="application/ld+json" set:html={JSON.stringify(bookActionSchema)} />}
  {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}

  <Footer />
  <FloatingWhatsApp />
</Layout>

