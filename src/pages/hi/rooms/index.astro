---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import FloatingWhatsApp from '../../../components/FloatingWhatsApp.astro';
import { generateBreadcrumbSchema } from '../../../lib/schemas/breadcrumb';

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: '/hi' },
  { name: 'Rooms', url: '/hi/rooms' },
]);

const rooms = [
  { slug: '2-bed-ac', title: '2 Bed AC Room', priceRange: '₹1,750 - ₹2,100', description: 'AC room + meals included.' },
  { slug: '2-bed-non-ac', title: '2 Bed Non-AC Room', priceRange: '₹1,250 - ₹1,550', description: 'Budget room + meals included.' },
  { slug: '3-bed-ac', title: '3 Bed AC Room', priceRange: '₹2,550 - ₹3,000', description: 'Family room + meals included.' },
  { slug: '3-bed-non-ac', title: '3 Bed Non-AC Room', priceRange: '₹1,950 - ₹2,350', description: 'Economical family room + meals included.' },
  { slug: '4-bed-ac', title: '4 Bed AC Room', priceRange: '₹3,100 - ₹3,500', description: 'Group room + meals included.' },
  { slug: '4-bed-non-ac', title: '4 Bed Non-AC Room', priceRange: '₹2,650 - ₹3,050', description: 'Spacious option for groups.' },
  { slug: 'deluxe-room', title: 'Deluxe Room', priceRange: '₹3,200 - ₹3,800', description: 'Premium comfort + meals included.' },
  { slug: 'family-suite', title: 'Family Suite', priceRange: '₹3,650 - ₹4,150', description: 'Extra space for family stays.' },
];
---

<Layout
  title="कमरे - श्री जानकी महल ट्रस्ट | रूम टाइप और कीमत"
  description="श्री जानकी महल ट्रस्ट में 2-बेड, 3-बेड, 4-बेड (AC/Non-AC) और प्रीमियम रूम। भोजन शामिल।"
  keywords={[
    'श्री जानकी महल ट्रस्ट कमरे',
    'अयोध्या रूम टाइप',
    'राम मंदिर के पास कमरे',
    'AC Non-AC कमरे',
  ]}
  canonical="/hi/rooms"
  ogImage="/og.jpg"
  lang="hi"
>
  <Header />

  <main class="min-h-screen bg-[#faf8f3] py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">कमरे (Room Types)</h1>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          AC/Non-AC रूम और सूट। सभी टैरिफ में भोजन (Breakfast, Lunch, Dinner) शामिल है।
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {rooms.map((room) => (
          <a
            href={`/hi/rooms/${room.slug}`}
            class="block bg-white rounded-2xl shadow-md border border-gray-100 p-6 hover:shadow-lg transition-shadow"
          >
            <h2 class="text-2xl font-bold text-gray-900 mb-2">{room.title}</h2>
            <p class="text-amber-700 font-semibold mb-3">{room.priceRange} (भोजन शामिल)</p>
            <p class="text-gray-700 leading-relaxed">{room.description}</p>
            <p class="mt-4 text-amber-600 font-semibold">डिटेल्स देखें →</p>
          </a>
        ))}
      </div>

      <div class="mt-12 bg-gradient-to-r from-amber-600 to-rose-600 rounded-lg p-8 text-center text-white">
        <h2 class="text-2xl font-bold mb-3">कौन सा रूम चुनें?</h2>
        <p class="text-lg opacity-90 mb-6">उपलब्धता/सलाह के लिए आधिकारिक टीम से संपर्क करें।</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/hi/room-prices"
            class="px-6 py-3 bg-white text-amber-700 font-bold rounded-lg hover:bg-gray-100 transition-colors"
          >
            रूम प्राइस
          </a>
          <a href="/hi/booking" class="px-6 py-3 bg-white text-amber-700 font-bold rounded-lg hover:bg-gray-100 transition-colors">
            बुकिंग पेज
          </a>
          <a href="/hi/contact-number" class="px-6 py-3 bg-green-600 text-white font-bold rounded-lg hover:bg-green-700 transition-colors">
            आधिकारिक संपर्क
          </a>
        </div>
        <p class="mt-4 text-sm text-amber-100">
          यह भी देखें: <a class="underline underline-offset-2" href="/hi/amenities">सुविधाएँ</a> और <a class="underline underline-offset-2" href="/hi/group-booking">ग्रुप बुकिंग</a>.
        </p>
      </div>

      {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
    </div>
  </main>

  <Footer />
  <FloatingWhatsApp />
</Layout>

