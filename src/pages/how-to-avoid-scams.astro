---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro';
import { generateBreadcrumbSchema } from '../lib/schemas/breadcrumb';
import { generateFAQSchema, type FAQItem } from '../lib/schemas/faq';
import { DISPLAY_PHONE, OFFICIAL_EMAIL } from '../lib/constants';

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: '/' },
  { name: 'Avoid Scams', url: '/how-to-avoid-scams' },
]);

const faqs: FAQItem[] = [
  {
    question: 'How do I avoid fake Janaki Mahal Trust bookings?',
    answer: `Use only official channels: call/WhatsApp ${DISPLAY_PHONE}, email ${OFFICIAL_EMAIL}, and this website (www.srijanakimahaltrustofficial.com). If someone contacts you from another number, do not pay—verify with the official helpline first.`,
  },
  {
    question: 'What should an official confirmation include?',
    answer:
      'An official confirmation should clearly mention guest name, dates, room type, total amount, check-in/check-out times, and a trust-stamped confirmation message. If details are missing or unclear, verify again on the official number.',
  },
  {
    question: 'Do you use third-party agents?',
    answer:
      'No. To reduce fraud risk, bookings should be coordinated directly with the trust via official phone/WhatsApp and official email.',
  },
  {
    question: 'What if I already paid to an unknown number?',
    answer:
      'Immediately contact your bank/UPI provider and report the transaction. Then call the official helpline to inform our team so we can warn other devotees.',
  },
];

const faqSchema = generateFAQSchema(faqs);
---

<Layout
  title="How to Avoid Fake Bookings - Sri Janaki Mahal Trust | Scam Prevention Guide"
  description={`Avoid scams while booking Sri Janaki Mahal Trust (Janaki Mahal Trust / Sri Janki Mahal Trust Ayodhya). Verify the official contact ${DISPLAY_PHONE} and follow safe booking steps.`}
  keywords={[
    'avoid fake bookings janaki mahal trust',
    'how to verify janaki mahal trust booking',
    'sri janki mahal trust scam prevention',
    'official booking verification ayodhya',
    'janaki mahal trust official contact number',
  ]}
  canonical="/how-to-avoid-scams"
  ogImage="/og.jpg"
>
  <Header />

  <main class="min-h-screen bg-[#faf8f3] py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-3xl shadow-lg p-8 sm:p-10">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">How to Avoid Fake Bookings</h1>
        <p class="text-lg text-gray-700 leading-relaxed">
          Many devotees search for “Janaki Mahal Trust Ayodhya”, “Sri Janki Mahal Trust”, or “Shri Janki Mahal Trust” and
          accidentally reach unofficial intermediaries. This guide helps you **verify the official trust** before making
          any payment.
        </p>

        <div class="mt-8 rounded-2xl border border-amber-200 bg-amber-50 p-6">
          <h2 class="text-2xl font-semibold text-gray-900 mb-3">Official verification (fastest)</h2>
          <ul class="list-disc pl-6 text-gray-800 space-y-2">
            <li>
              **Call/WhatsApp**: <a class="text-amber-700 font-semibold hover:underline" href="tel:+918936059096">{DISPLAY_PHONE}</a>
            </li>
            <li>
              **Email**: <a class="text-amber-700 font-semibold hover:underline" href={`mailto:${OFFICIAL_EMAIL}`}>{OFFICIAL_EMAIL}</a>
            </li>
            <li>
              **Use official pages**: <a class="text-amber-700 font-semibold hover:underline" href="/official">Verify page</a>,{' '}
              <a class="text-amber-700 font-semibold hover:underline" href="/official-booking">Official booking</a>
            </li>
          </ul>
        </div>

        <h2 class="mt-10 text-2xl font-semibold text-gray-900">Red flags (do not proceed)</h2>
        <ul class="mt-4 grid gap-3 sm:grid-cols-2 text-gray-800">
          <li class="rounded-xl border border-gray-200 p-4">Different phone number than {DISPLAY_PHONE}</li>
          <li class="rounded-xl border border-gray-200 p-4">Pressure to “pay immediately” before confirmation</li>
          <li class="rounded-xl border border-gray-200 p-4">Payment requested to personal accounts</li>
          <li class="rounded-xl border border-gray-200 p-4">No written confirmation slip / unclear details</li>
        </ul>

        <h2 class="mt-10 text-2xl font-semibold text-gray-900">Safe booking flow (simple)</h2>
        <ol class="mt-4 list-decimal pl-6 text-gray-800 space-y-2">
          <li>Call/WhatsApp the official number and share dates + guests + room preference.</li>
          <li>Receive availability + tariff and confirm the room type.</li>
          <li>Get a trust-stamped confirmation message with booking details.</li>
          <li>Make payment only after confirmation and only through official instructions.</li>
          <li>Keep confirmation handy for check-in.</li>
        </ol>

        <div class="mt-10 grid gap-4 sm:grid-cols-2">
          <a
            href="/booking-verification-guide"
            class="rounded-xl bg-[#2d2215] px-6 py-4 text-white font-semibold hover:bg-[#b45309] transition-colors text-center"
          >
            Read booking verification guide
          </a>
          <a
            href="/contact-number"
            class="rounded-xl border border-[#2d2215] px-6 py-4 text-[#2d2215] font-semibold hover:bg-[#f4ecdf] transition-colors text-center"
          >
            Official contact number page
          </a>
        </div>
      </div>

      {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}
      {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
    </div>
  </main>

  <Footer />
  <FloatingWhatsApp />
</Layout>

