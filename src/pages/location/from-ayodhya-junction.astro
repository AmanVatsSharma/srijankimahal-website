---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { generateBreadcrumbSchema } from '../../lib/schemas/breadcrumb';
import { DISPLAY_PHONE, TEL_LINK, WHATSAPP_LINK } from '../../lib/constants';

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: '/' },
  { name: 'Location', url: '/location' },
  { name: 'From Ayodhya Junction', url: '/location/from-ayodhya-junction' },
]);
---

<Layout
  title="How to Reach Sri Janaki Mahal Trust from Ayodhya Junction | Directions"
  description={`Directions to reach Sri Janaki Mahal Trust from Ayodhya Junction / Ayodhya Railway Station. Official help: ${DISPLAY_PHONE}.`}
  keywords={[
    'how to reach sri janaki mahal trust from ayodhya junction',
    'janaki mahal trust from ayodhya railway station',
    'ayodhya junction to janaki mahal trust',
    'transport to janaki mahal trust near ram mandir',
  ]}
  canonical="/location/from-ayodhya-junction"
  ogImage="/og.jpg"
>
  <Header />

  <main class="min-h-screen bg-[#faf8f3] py-12">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-3xl shadow-lg p-8 sm:p-10">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">From Ayodhya Junction (Railway Station)</h1>
        <p class="text-lg text-gray-700 leading-relaxed">
          This page helps you reach Sri Janaki Mahal Trust (Karsewakpuram, Ayodhya) smoothly after your train arrival.
        </p>

        <div class="mt-8 rounded-2xl border border-amber-200 bg-amber-50 p-6">
          <h2 class="text-2xl font-semibold text-gray-900 mb-3">Need help right now?</h2>
          <div class="flex flex-col sm:flex-row gap-3">
            <a class="rounded-xl bg-[#2d2215] px-6 py-3 text-white font-semibold text-center hover:bg-[#b45309]" href={TEL_LINK}>
              Call {DISPLAY_PHONE}
            </a>
            <a class="rounded-xl bg-green-600 px-6 py-3 text-white font-semibold text-center hover:bg-green-700" href={WHATSAPP_LINK} target="_blank" rel="noopener noreferrer">
              WhatsApp Directions
            </a>
          </div>
        </div>

        <h2 class="mt-10 text-2xl font-semibold text-gray-900">Common options</h2>
        <div class="mt-4 grid gap-4 sm:grid-cols-2">
          <div class="rounded-2xl border border-gray-200 p-5">
            <h3 class="text-lg font-semibold text-gray-900">Auto-rickshaw</h3>
            <p class="mt-2 text-gray-700">
              Easily available outside the station. Confirm the destination as “Sri Janaki Mahal Trust, Karsewakpuram, near Ram Mandir”.
            </p>
          </div>
          <div class="rounded-2xl border border-gray-200 p-5">
            <h3 class="text-lg font-semibold text-gray-900">Taxi / cab</h3>
            <p class="mt-2 text-gray-700">
              Suitable for families and group luggage. If you are unsure about route, call the official number for guidance.
            </p>
          </div>
        </div>

        <div class="mt-10">
          <h2 class="text-2xl font-semibold text-gray-900">Also useful</h2>
          <ul class="mt-3 list-disc pl-6 text-gray-800 space-y-2">
            <li><a class="text-amber-700 font-semibold hover:underline" href="/location/near-ram-mandir">Near Ram Mandir location details</a></li>
            <li><a class="text-amber-700 font-semibold hover:underline" href="/booking">Booking page</a></li>
            <li><a class="text-amber-700 font-semibold hover:underline" href="/how-to-avoid-scams">Avoid scams checklist</a></li>
          </ul>
        </div>
      </div>

      {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
    </div>
  </main>

  <Footer />
</Layout>

