---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro';
import { generateBreadcrumbSchema } from '../lib/schemas/breadcrumb';
import { generateReservationActionSchema, generateBookActionSchema } from '../lib/schemas/booking';
import { generateFAQSchema, type FAQItem } from '../lib/schemas/faq';

// Console output keeps debugging visibility for rendering pipeline
console.log('[OfficialBookingPage] Rendering official booking landing page with enhanced trust signals');

const officialPhone = '+918295588176';
const displayPhone = '+91 8295588176';
const officialBookingUrl = 'https://www.srijanakimahaltrustofficial.com/official-booking';

// Breadcrumb structure for search engines
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: '/' },
  { name: 'Official Booking', url: '/official-booking' }
]);

// Schema for ReservationAction and BookAction
const reservationActionSchema = generateReservationActionSchema(
  officialBookingUrl,
  `tel:${officialPhone}`,
  'Sri Janaki Mahal Trust'
);

const bookActionSchema = generateBookActionSchema(officialBookingUrl);

// FAQ list focusing on authenticity and verification
const officialBookingFAQs: FAQItem[] = [
  {
    question: 'How do I make an official booking at Janaki Mahal Trust?',
    answer:
      'Use the official helpline +91 8295588176 or WhatsApp the same number. Our team sends the trust-stamped confirmation slip on WhatsApp or email. No third-party agents are involved.'
  },
  {
    question: 'Is this the verified Sri Janki Mahal Trust booking page?',
    answer:
      'Yes. This is the only official booking page of Sri Janaki Mahal Trust (also called Janaki Mahal Trust Ayodhya and Shri Janki Mahal Trust). All confirmations are issued directly by the trust administration.'
  },
  {
    question: 'How can I verify that my booking is genuine?',
    answer:
      'A genuine booking includes a trust seal, booking ID, guest details, and check-in time. Confirmation is always sent from +91 8295588176 or the trust email srijanakimahaltrust7484@gmail.com.'
  },
  {
    question: 'Can I pay advance amount for official booking?',
    answer:
      'Yes, advance payment links are shared only via the official WhatsApp number or email after availability confirmation. We never share payment links over unknown numbers.'
  }
];

const faqSchema = generateFAQSchema(officialBookingFAQs);
---

<Layout
  title="Sri Janki Mahal Official Booking | Janaki Mahal Trust Verified Reservations"
  description="Book officially with Sri Janaki Mahal Trust (Janaki Mahal Trust / Shri Janki Mahal Trust Ayodhya). Use the verified helpline +91 8295588176 for authentic bookings near Ram Mandir."
  keywords={[
    'sri janki mahal official booking',
    'janaki mahal trust official booking',
    'shri janki mahal trust booking',
    'janaki mahal official reservation',
    'official janaki mahal trust booking',
    'verified sri janki mahal booking',
    'janaki mahal trust booking confirmation',
    'authentic sri janaki mahal booking',
    'janaki mahal trust ayodhya booking',
    'official booking janaki mahal contact'
  ]}
  canonical="/official-booking"
  ogImage="/og.jpg"
>
  <Header />
  <!-- Standard page container: consistent padding across all breakpoints -->
  <main class="bg-[#faf8f3] py-12">
    <div class="mx-auto flex max-w-6xl flex-col gap-12 px-4 sm:px-6 lg:px-8">
      <!-- Hero emphasises authenticity -->
      <section class="rounded-3xl bg-gradient-to-br from-[#fde6c8] via-[#f9d9b3] to-[#f1c89a] p-10 shadow-xl">
        <p class="text-xs font-semibold uppercase tracking-[0.4em] text-[#744016]">Official Sri Janki Mahal Trust Booking</p>
        <h1 class="mt-4 text-4xl font-bold text-[#2d2215] md:text-5xl">
          Book Directly with Janaki Mahal Trust â€“ 100% Verified & Secure
        </h1>
        <p class="mt-6 text-lg leading-relaxed text-[#3d2f1c]">
          Avoid fake agents and duplicate listings. This is the only official booking portal for 
          <strong>Sri Janaki Mahal Trust</strong>, also known as <strong>Janaki Mahal Trust Ayodhya</strong> 
          and <strong>Shri Janki Mahal Trust</strong>. Contact the trust administration directly for real-time availability,
          authentic confirmations, and secure payment guidance.
        </p>
        <div class="mt-8 grid gap-4 sm:grid-cols-2">
          <a
            class="flex items-center justify-center rounded-xl bg-[#2d2215] px-6 py-4 text-base font-semibold uppercase tracking-wide text-white transition hover:bg-[#aa4600]"
            href={`tel:${officialPhone}`}
          >
            ðŸ“ž Call {displayPhone} (Official Helpline)
          </a>
          <a
            class="flex items-center justify-center rounded-xl border border-[#2d2215] px-6 py-4 text-base font-semibold uppercase tracking-wide text-[#2d2215] transition hover:bg-[#f6dfc4]"
            href={`https://wa.me/${officialPhone}`}
          >
            ðŸ’¬ WhatsApp Verified Booking Desk
          </a>
        </div>
        <p class="mt-4 text-sm text-[#6b4c2d]">
          Flow Chart: Contact verified helpline â†’ Share guest details â†’ Receive trust-stamped confirmation â†’ Make secure payment â†’ Enjoy peaceful stay.
        </p>
      </section>

      <!-- Trust checklist and scam prevention tips -->
      <section class="rounded-3xl bg-white p-8 shadow-md">
        <h2 class="text-3xl font-semibold text-[#2d2215]">Why Official Booking Matters</h2>
        <div class="mt-6 grid gap-6 md:grid-cols-2">
          <div class="rounded-2xl bg-[#fef4e4] p-6">
            <h3 class="text-2xl font-semibold text-[#2d2215]">Official Booking Checklist</h3>
            <ul class="mt-4 space-y-3 text-base text-[#3d2f1c]">
              <li>âœ“ Confirmation sent from {displayPhone} or official email</li>
              <li>âœ“ Trust seal & booking ID on confirmation slip</li>
              <li>âœ“ Payment instructions only on verified channels</li>
              <li>âœ“ AC / Non-AC room category noted clearly</li>
              <li>âœ“ Check-in time (2 PM) and meal plan mentioned</li>
            </ul>
          </div>
          <div class="rounded-2xl bg-[#fef4e4] p-6">
            <h3 class="text-2xl font-semibold text-[#2d2215]">Avoid Scams & Fake Agents</h3>
            <p class="mt-4 text-base leading-relaxed text-[#3d2f1c]">
              Sri Janaki Mahal Trust never uses personal phone numbers, messaging apps with unknown display names, or 
              freelance travel agents. If someone shares a different contact number or asks for payment before confirmation,
              decline immediately and report it to the trust.
            </p>
            <p class="mt-4 text-sm italic text-[#6b4c2d]">
              Flow Chart: Suspicious contact detected â†’ Reject communication â†’ Dial official helpline â†’ Verify booking â†’ Proceed safely.
            </p>
          </div>
        </div>
      </section>

      <!-- Booking flow -->
      <section class="rounded-3xl bg-[#f1e5d0] p-8 shadow-inner">
        <h2 class="text-3xl font-semibold text-[#2d2215]">Official Booking Flow</h2>
        <div class="mt-6 grid gap-6 md:grid-cols-5">
          {[
            'Call or WhatsApp the official number',
            'Share travel dates and room preference',
            'Team verifies availability and pricing',
            'Receive trust-stamped confirmation slip',
            'Arrive and show confirmation at check-in'
          ].map((step, index) => (
            <div class="rounded-2xl bg-white p-4 text-center shadow-sm">
              <span class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-[#2d2215] text-lg font-semibold text-white">
                {index + 1}
              </span>
              <p class="mt-3 text-sm font-medium text-[#3d2f1c]">{step}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- FAQ Section -->
      <section class="rounded-3xl bg-white p-8 shadow-md">
        <h2 class="text-3xl font-semibold text-[#2d2215]">Official Booking FAQs</h2>
        <div class="mt-6 space-y-4">
          {officialBookingFAQs.map((faq) => (
            <details class="rounded-xl border border-[#ead7bf] bg-[#fef6ea] p-4">
              <summary class="cursor-pointer text-lg font-semibold text-[#2d2215]">
                {faq.question}
              </summary>
              <p class="mt-3 text-base text-[#3d2f1c]">
                {faq.answer}
              </p>
            </details>
          ))}
        </div>
      </section>

      <!-- Secondary CTAs -->
      <section class="grid gap-6 md:grid-cols-2">
        <div class="rounded-3xl border border-[#f1dac0] bg-white p-6 shadow-sm">
          <h3 class="text-2xl font-semibold text-[#2d2215]">Phone Confirmation</h3>
          <p class="mt-3 text-base text-[#3d2f1c]">
            Speak directly with our booking manager for immediate official confirmation and personalised stay planning.
          </p>
          <a
            class="mt-4 inline-flex items-center justify-center rounded-xl bg-[#2d2215] px-5 py-3 text-sm font-semibold uppercase tracking-wide text-white transition hover:bg-[#b45309]"
            href={`tel:${officialPhone}`}
          >
            Call {displayPhone}
          </a>
        </div>
        <div class="rounded-3xl border border-[#f1dac0] bg-white p-6 shadow-sm">
          <h3 class="text-2xl font-semibold text-[#2d2215]">WhatsApp Booking Link</h3>
          <p class="mt-3 text-base text-[#3d2f1c]">
            Receive the official booking link with secure payment guidance and room allocation summary.
          </p>
          <a
            class="mt-4 inline-flex items-center justify-center rounded-xl border border-[#2d2215] px-5 py-3 text-sm font-semibold uppercase tracking-wide text-[#2d2215] transition hover:bg-[#f4ecdf]"
            href={`https://wa.me/${officialPhone}`}
          >
            Message Official Desk
          </a>
        </div>
      </section>
    </div>
  </main>

  {breadcrumbSchema && (
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  )}

  {reservationActionSchema && (
    <script type="application/ld+json" set:html={JSON.stringify(reservationActionSchema)} />
  )}

  {bookActionSchema && (
    <script type="application/ld+json" set:html={JSON.stringify(bookActionSchema)} />
  )}

  {faqSchema && (
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  )}

  <Footer />
  <FloatingWhatsApp />
</Layout>

