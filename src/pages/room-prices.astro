---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro';
import { generateBreadcrumbSchema } from '../lib/schemas/breadcrumb';
import { generateFAQSchema, type FAQItem } from '../lib/schemas/faq';
import { DISPLAY_PHONE, TEL_LINK, WHATSAPP_BOOKING_LINK, WHATSAPP_LINK } from '../lib/constants';

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: '/' },
  { name: 'Room Prices', url: '/room-prices' },
]);

const roomOffers = [
  {
    slug: '2-bed-non-ac',
    name: '2 Bed Non-AC Room',
    priceRange: '₹1,250 - ₹1,550',
    startsFrom: 1250,
    bestFor: 'Budget stays, 2 guests',
  },
  {
    slug: '2-bed-ac',
    name: '2 Bed AC Room',
    priceRange: '₹1,750 - ₹2,100',
    startsFrom: 1750,
    bestFor: 'Couples, comfort stays',
  },
  {
    slug: '3-bed-non-ac',
    name: '3 Bed Non-AC Room',
    priceRange: '₹1,950 - ₹2,350',
    startsFrom: 1950,
    bestFor: 'Family/triple sharing',
  },
  {
    slug: '3-bed-ac',
    name: '3 Bed AC Room',
    priceRange: '₹2,550 - ₹3,000',
    startsFrom: 2550,
    bestFor: 'Family/triple sharing (AC)',
  },
  {
    slug: '4-bed-non-ac',
    name: '4 Bed Non-AC Room',
    priceRange: '₹2,650 - ₹3,050',
    startsFrom: 2650,
    bestFor: 'Yatri groups / 4 guests',
  },
  {
    slug: '4-bed-ac',
    name: '4 Bed AC Room',
    priceRange: '₹3,100 - ₹3,500',
    startsFrom: 3100,
    bestFor: 'Yatri groups (AC)',
  },
  {
    slug: 'deluxe-room',
    name: 'Deluxe Room',
    priceRange: '₹3,200 - ₹3,800',
    startsFrom: 3200,
    bestFor: 'Premium comfort',
  },
  {
    slug: 'family-suite',
    name: 'Family Suite',
    priceRange: '₹3,650 - ₹4,150',
    startsFrom: 3650,
    bestFor: 'Family suite / extra space',
  },
] as const;

const offerCatalogSchema = {
  '@context': 'https://schema.org',
  '@type': 'OfferCatalog',
  name: 'Sri Janaki Mahal Trust Room Prices',
  url: 'https://www.srijanakimahaltrustofficial.com/room-prices',
  itemListElement: roomOffers.map((room) => ({
    '@type': 'Offer',
    name: room.name,
    url: `https://www.srijanakimahaltrustofficial.com/rooms/${room.slug}`,
    priceCurrency: 'INR',
    price: String(room.startsFrom),
    availability: 'https://schema.org/InStock',
    eligibleRegion: 'IN',
  })),
};

const faqs: FAQItem[] = [
  {
    question: 'Are meals included in the room price?',
    answer:
      'Yes. Sri Janaki Mahal Trust room tariffs include meals (Breakfast, Lunch, Dinner). Always confirm the final tariff and inclusions during booking confirmation.',
  },
  {
    question: 'Why do room prices have a range?',
    answer:
      'Tariffs can vary by date, season (festival rush), and availability. The price range helps you estimate; the final tariff is confirmed by the official team.',
  },
  {
    question: 'How do I confirm the final room tariff?',
    answer: `Call or WhatsApp the official desk at ${DISPLAY_PHONE}. The final tariff is shared during confirmation along with room type and dates.`,
  },
  {
    question: 'Where can I see details for each room type?',
    answer:
      'Open the Rooms page on this website and select a room type. Each room page has photos, highlights, and the booking CTA.',
  },
];

const faqSchema = generateFAQSchema(faqs);
---

<Layout
  title="Room Prices - Sri Janaki Mahal Trust | Tariff (Meals Included) Ayodhya"
  description={`Sri Janaki Mahal Trust room prices (tariff) in Ayodhya near Ram Mandir. See AC/Non-AC room price ranges with meals included. Confirm final tariff on ${DISPLAY_PHONE}.`}
  keywords={[
    'Sri Janaki Mahal Trust room prices',
    'Sri Janaki Mahal Trust tariff',
    'janaki mahal room price',
    'janki mahal trust room tariff',
    'Ayodhya room prices near Ram Mandir',
    'AC room price Ayodhya',
    'Non AC room price Ayodhya',
    'family suite price Ayodhya',
  ]}
  canonical="/room-prices"
  ogImage="/og.jpg"
>
  <Header />

  <main class="min-h-screen bg-[#faf8f3]">
    <section class="bg-gradient-to-r from-amber-600 to-rose-600 text-white py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl sm:text-5xl font-bold mb-5">
          Sri Janaki Mahal Trust <span class="text-amber-200">Room Prices</span>
        </h1>
        <p class="text-xl max-w-3xl mx-auto">
          Transparent tariff ranges for AC & Non-AC rooms in Ayodhya near Ram Mandir.
          <span class="block mt-2 text-amber-100">Meals included (Breakfast, Lunch, Dinner).</span>
        </p>
      </div>
    </section>

    <section class="py-14 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid gap-6 lg:grid-cols-2">
          <div class="rounded-3xl border border-amber-200 bg-amber-50 p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-3">Quick note</h2>
            <p class="text-gray-800 leading-relaxed">
              Prices can vary by date and availability. For the final tariff and confirmation, use the official channels only:
              <a href={TEL_LINK} class="font-semibold underline underline-offset-2">{DISPLAY_PHONE}</a> and
              <a href={WHATSAPP_LINK} class="font-semibold underline underline-offset-2">WhatsApp</a>.
            </p>
            <div class="mt-6 flex flex-col sm:flex-row gap-3">
              <a
                href={TEL_LINK}
                class="flex-1 rounded-xl bg-[#2d2215] px-6 py-3 text-white font-semibold hover:bg-[#b45309] transition-colors text-center"
              >
                Call for final tariff
              </a>
              <a
                href={WHATSAPP_BOOKING_LINK}
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 rounded-xl bg-green-600 px-6 py-3 text-white font-semibold hover:bg-green-700 transition-colors text-center"
              >
                WhatsApp booking
              </a>
            </div>
          </div>

          <div class="rounded-3xl border border-gray-200 bg-white p-8 shadow-sm">
            <h2 class="text-2xl font-bold text-gray-900 mb-3">Included in tariff</h2>
            <ul class="mt-4 space-y-2 text-gray-800">
              <li><span class="text-green-700 font-semibold">✓</span> Room stay (AC/Non‑AC options)</li>
              <li><span class="text-green-700 font-semibold">✓</span> All meals (Breakfast, Lunch, Dinner)</li>
              <li><span class="text-green-700 font-semibold">✓</span> Hot water facility</li>
              <li><span class="text-green-700 font-semibold">✓</span> Peaceful spiritual environment</li>
            </ul>
            <p class="mt-4 text-sm text-gray-600">
              For verified booking channels and scam protection, see
              <a class="underline underline-offset-2" href="/official-booking">official booking</a> and
              <a class="underline underline-offset-2" href="/contact-number">official contact number</a>.
            </p>
          </div>
        </div>

        <h2 class="mt-14 text-3xl font-bold text-gray-900">Room types & price ranges</h2>
        <p class="mt-2 text-gray-700">
          Click a room type to see photos, details, and booking guidance.
        </p>

        <div class="mt-8 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {roomOffers.map((room) => (
            <a
              href={`/rooms/${room.slug}`}
              class="block rounded-3xl border border-gray-100 bg-white p-6 shadow-sm hover:shadow-md transition-shadow"
            >
              <h3 class="text-xl font-bold text-gray-900">{room.name}</h3>
              <p class="mt-2 text-amber-700 font-semibold">{room.priceRange} (meals included)</p>
              <p class="mt-2 text-gray-700">{room.bestFor}</p>
              <p class="mt-4 text-amber-600 font-semibold">View room details →</p>
            </a>
          ))}
        </div>

        <div class="mt-14 rounded-3xl bg-gray-50 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-3">Booking shortcut</h2>
          <p class="text-gray-800">
            Already know your dates? Go to
            <a class="underline underline-offset-2" href="/booking">booking</a>
            to send the details quickly, or message us on WhatsApp.
          </p>
          <div class="mt-6 flex flex-col sm:flex-row gap-3">
            <a
              href="/booking"
              class="flex-1 rounded-xl border border-[#2d2215] px-6 py-3 text-[#2d2215] font-semibold hover:bg-[#f4ecdf] transition-colors text-center"
            >
              Booking page
            </a>
            <a
              href={WHATSAPP_BOOKING_LINK}
              target="_blank"
              rel="noopener noreferrer"
              class="flex-1 rounded-xl bg-green-600 px-6 py-3 text-white font-semibold hover:bg-green-700 transition-colors text-center"
            >
              WhatsApp now
            </a>
          </div>
        </div>
      </div>
    </section>

    <section class="py-14 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">FAQs</h2>
        <div class="space-y-6">
          {faqs.map((faq, index) => (
            <div class="rounded-2xl border border-gray-100 bg-gray-50 p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">
                <span class="text-amber-700">Q{index + 1}.</span> {faq.question}
              </h3>
              <p class="text-gray-800 leading-relaxed">{faq.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
  {offerCatalogSchema && <script type="application/ld+json" set:html={JSON.stringify(offerCatalogSchema)} />}
  {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}

  <Footer />
  <FloatingWhatsApp />
</Layout>

