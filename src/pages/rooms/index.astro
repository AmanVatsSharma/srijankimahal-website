---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingWhatsApp from '../../components/FloatingWhatsApp.astro';
import { generateBreadcrumbSchema } from '../../lib/schemas/breadcrumb';

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: '/' },
  { name: 'Rooms', url: '/rooms' },
]);

const rooms = [
  {
    slug: '2-bed-ac',
    title: '2 Bed AC Room',
    priceRange: '₹1,750 - ₹2,100',
    description: 'Comfortable AC room with meals included. Ideal for couples/small families.',
  },
  {
    slug: '2-bed-non-ac',
    title: '2 Bed Non-AC Room',
    priceRange: '₹1,250 - ₹1,550',
    description: 'Budget-friendly room with meals included and natural ventilation.',
  },
  {
    slug: '3-bed-ac',
    title: '3 Bed AC Room',
    priceRange: '₹2,550 - ₹3,000',
    description: 'Family-friendly AC room for triple sharing with meals included.',
  },
  {
    slug: '3-bed-non-ac',
    title: '3 Bed Non-AC Room',
    priceRange: '₹1,950 - ₹2,350',
    description: 'Economical family room with meals included and peaceful ambience.',
  },
  {
    slug: '4-bed-ac',
    title: '4 Bed AC Room',
    priceRange: '₹3,100 - ₹3,500',
    description: 'Group-friendly AC room for yatri groups with meals included.',
  },
  {
    slug: '4-bed-non-ac',
    title: '4 Bed Non-AC Room',
    priceRange: '₹2,650 - ₹3,050',
    description: 'Spacious non‑AC option for groups and large families.',
  },
  {
    slug: 'deluxe-room',
    title: 'Deluxe Room',
    priceRange: '₹3,200 - ₹3,800',
    description: 'Premium room with elevated comfort and meals included.',
  },
  {
    slug: 'family-suite',
    title: 'Family Suite',
    priceRange: '₹3,650 - ₹4,150',
    description: 'Premium family suite with extra space, designed for longer stays.',
  },
];
---

<Layout
  title="Rooms - Sri Janaki Mahal Trust | AC & Non-AC Room Types"
  description="Explore room types at Sri Janaki Mahal Trust: 2-bed, 3-bed, 4-bed rooms (AC/Non-AC) and premium suites. All meals included."
  keywords={[
    'Sri Janaki Mahal Trust rooms',
    'janaki mahal trust room types',
    '2 bed room ayodhya',
    '3 bed room ayodhya',
    '4 bed room ayodhya',
    'AC rooms near Ram Mandir',
    'Non AC rooms Ayodhya',
  ]}
  canonical="/rooms"
  ogImage="/og.jpg"
>
  <Header />

  <main class="min-h-screen bg-[#faf8f3] py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">Room Types</h1>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Explore AC and Non‑AC rooms and suites near Ram Mandir. All room tariffs include meals (Breakfast, Lunch, Dinner).
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {rooms.map((room) => (
          <a
            href={`/rooms/${room.slug}`}
            class="block bg-white rounded-2xl shadow-md border border-gray-100 p-6 hover:shadow-lg transition-shadow"
          >
            <h2 class="text-2xl font-bold text-gray-900 mb-2">{room.title}</h2>
            <p class="text-amber-700 font-semibold mb-3">{room.priceRange} (meals included)</p>
            <p class="text-gray-700 leading-relaxed">{room.description}</p>
            <p class="mt-4 text-amber-600 font-semibold">View details →</p>
          </a>
        ))}
      </div>

      <div class="mt-12 bg-gradient-to-r from-amber-600 to-rose-600 rounded-lg p-8 text-center text-white">
        <h2 class="text-2xl font-bold mb-3">Need help choosing a room?</h2>
        <p class="text-lg opacity-90 mb-6">Call or WhatsApp for availability and best fit.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/booking"
            class="px-6 py-3 bg-white text-amber-700 font-bold rounded-lg hover:bg-gray-100 transition-colors"
          >
            Booking page
          </a>
          <a
            href="/contact-number"
            class="px-6 py-3 bg-green-600 text-white font-bold rounded-lg hover:bg-green-700 transition-colors"
          >
            Official contact
          </a>
        </div>
      </div>

      {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
    </div>
  </main>

  <Footer />
  <FloatingWhatsApp />
</Layout>

